{
  "name": "voxtics-design-system",
  "version": "1.0.0",
  "description": "VoxTics Cinema Booking System with Apple Keyboard+ Design System",
  "main": "index.js",
  "scripts": {
    "build-css": "tailwindcss -i ./VoxTics/wwwroot/css/input.css -o ./VoxTics/wwwroot/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./VoxTics/wwwroot/css/input.css -o ./VoxTics/wwwroot/css/output.css --minify",
    "purge-css": "purgecss --css ./VoxTics/wwwroot/css/*.css --content ./VoxTics/Views/**/*.cshtml ./VoxTics/Areas/**/*.cshtml --output ./VoxTics/wwwroot/css/purged/",
    "analyze-css": "cssstats ./VoxTics/wwwroot/css/*.css",
    "lint-css": "stylelint ./VoxTics/wwwroot/css/**/*.css --fix",
    "optimize-images": "imagemin ./VoxTics/wwwroot/images/**/* --out-dir=./VoxTics/wwwroot/images/optimized/",
    "bundle-js": "webpack --mode=production",
    "bundle-analyze": "ANALYZE=true webpack --mode=production",
    "dev": "concurrently \"npm run build-css\" \"dotnet watch run --project VoxTics\"",
    "dev-webpack": "concurrently \"npm run build-css\" \"webpack serve --mode=development\" \"dotnet watch run --project VoxTics\"",
    "build": "node scripts/build-optimized.js",
    "build-fast": "npm run build-css-prod && dotnet build VoxTics --configuration Release",
    "build-analyze": "npm run build && npm run bundle-analyze",
    "clean": "rimraf ./VoxTics/wwwroot/css/output.css ./VoxTics/wwwroot/css/purged/ ./VoxTics/wwwroot/dist/ ./VoxTics/bin/ ./VoxTics/obj/",
    "clean-all": "npm run clean && rimraf node_modules package-lock.json",
    "optimize": "node scripts/optimize-project.js",
    "audit-duplicates": "jscpd --min-lines 5 --min-tokens 50 --reporters html,console --output ./reports/duplicates/ ./VoxTics/",
    "analyze-bundle": "webpack-bundle-analyzer ./VoxTics/wwwroot/dist/stats.json",
    "test-css": "quixote ./tests/css/",
    "validate-html": "html-validate ./VoxTics/Views/**/*.cshtml",
    "accessibility-test": "pa11y-ci --sitemap http://localhost:5000/sitemap.xml",
    "security-audit": "npm audit && dotnet list VoxTics/VoxTics.csproj package --vulnerable",
    "format": "dotnet format VoxTics/VoxTics.csproj && npm run lint-css",
    "precommit": "npm run format && npm run optimize && npm run build-fast",
    "postinstall": "echo 'Dependencies installed successfully. Run npm run dev to start development.'"
  },
  "keywords": [
    "aspnet-core",
    "mvc",
    "tailwindcss",
    "apple-design",
    "cinema-booking",
    "design-system"
  ],
  "author": "VoxTics Development Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.23.6",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.23",
    "babel-loader": "^9.1.3",
    "chalk": "^4.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^8.2.2",
    "core-js": "^3.34.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "cssstats": "^4.0.5",
    "glob": "^10.3.10",
    "html-validate": "^8.7.4",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jscpd": "^3.5.10",
    "mini-css-extract-plugin": "^2.7.6",
    "pa11y-ci": "^3.0.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^7.3.3",
    "postcss-reporter": "^7.0.5",
    "purgecss": "^5.0.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.3.1",
    "tailwindcss": "^4.1.18",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "htmx.org": "^1.9.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
