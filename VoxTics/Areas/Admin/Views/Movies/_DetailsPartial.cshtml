@using VoxTics.Areas.Admin.ViewModels.Movie
@model MovieCreateEditViewModel

<div class="row">
    <div class="col-md-4">
     
    </div>
    <div class="col-md-8">
        <h4>@Model.Title</h4>
        <p>@Model.Description</p>

        <dl class="row">
            <dt class="col-sm-4">Release</dt>
            <dd class="col-sm-8">@Model.ReleaseDate.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-4">Duration</dt>
            <dd class="col-sm-8">@Model.Duration min</dd>
            <dt class="col-sm-4">Director</dt>
            <dd class="col-sm-8">@Model.Director</dd>
            <dt class="col-sm-4">Language</dt>
            <dd class="col-sm-8">@Model.Language</dd>
            <dt class="col-sm-4">IMDB</dt>
            <dd class="col-sm-8">@Model.Rating</dd>
            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
            <dt class="col-sm-4">Status</dt>
            <dt class="col-sm-4">Categories</dt>
            <dd class="col-sm-8">@string.Join(", ", Model.CategoryId)</dd>
        </dl>

        <div class="text-end">
            <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button class="btn btn-primary js-open" data-url="@Url.Action("Edit", new { id = Model.Id })" data-title="Edit: @Model.Title">Edit</button>
        </div>
    </div>
</div>
