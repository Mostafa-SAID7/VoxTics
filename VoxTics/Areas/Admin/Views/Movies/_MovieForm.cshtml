@model VoxTics.Areas.Admin.ViewModels.MovieVMs.MovieEditVM
@using Microsoft.AspNetCore.Mvc.Rendering

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" asp-controller="Movies" asp-area="Admin" method="post" enctype="multipart/form-data" class="ajax-entity-form">
    @if (Model.Id != 0)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" type="date" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control" type="date" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Cinema</label>
            <select asp-for="CinemaId" asp-items="Model.Cinemas" class="form-select"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Status</label>
            <select asp-for="MovieStatus" class="form-select">
                @foreach (var s in Enum.GetValues(typeof(VoxTics.Models.Enums.MovieStatus)).Cast<VoxTics.Models.Enums.MovieStatus>())
                {
                    <option value="@s" @(Model.MovieStatus == s ? "selected" : "")>@s</option>
                }
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Main Poster (replace)</label>
        <input asp-for="MainImage" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="mt-2"><img src="@Model.ImgUrl" style="height:80px;object-fit:cover" /></div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Additional Images (multiple)</label>
        <input asp-for="UploadedImages" type="file" multiple class="form-control" />
        @if (Model.ExistingImages?.Any() == true)
        {
            <div class="mt-2 d-flex gap-2 flex-wrap">
                @foreach (var img in Model.ExistingImages)
                {
                    <div class="existing-image border p-1 text-center">
                        <img src="@img.ImgUrl" style="height:80px; display:block; margin-bottom:6px" />
                        <button class="btn btn-sm btn-danger btn-remove-img" data-id="@img.Id">Remove</button>
                    </div>
                }
            </div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Trailer URL</label>
        <input asp-for="TrailerUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Actors</label>
        <select asp-for="SelectedActorIds" asp-items="Model.Actors" multiple class="form-select"></select>
    </div>

    <div class="text-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
