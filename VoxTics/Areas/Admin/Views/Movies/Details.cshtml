@model VoxTics.Areas.Admin.ViewModels.Movie.MovieDetailViewModel
@{
    ViewData["Title"] = "Movie Details";
}

<div class="container py-4">
    <h2>@Model.Title</h2>
    <div class="row mt-3">
        <div class="col-md-4">
            <img src="~/uploads/movies/@Model.MainImageUrl" class="img-fluid mb-3" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>

                <dt class="col-sm-3">Director</dt>
                <dd class="col-sm-9">@Model.Director</dd>

                <dt class="col-sm-3">Release Date</dt>
                <dd class="col-sm-9">@Model.ReleaseDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.Duration min</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Rating</dt>
                <dd class="col-sm-9">@Model.Rating?.ToString("0.0") ?? "N/A"</dd>

                <dt class="col-sm-3">Language</dt>
                <dd class="col-sm-9">@Model.Language</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <a href="@Model.TrailerUrl" target="_blank" class="btn btn-primary mt-2">Watch Trailer</a>
            }

            <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
        </div>
    </div>
</div>
