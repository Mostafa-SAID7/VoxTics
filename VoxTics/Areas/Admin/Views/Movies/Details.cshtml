@model VoxTics.Areas.Admin.ViewModels.Movie.MovieDetailViewModel
@using VoxTics.Models.Enums
@inject VoxTics.Helpers.ImgsHelper.ImageManager ImgManager

@{
    ViewData["Title"] = Model.Title;
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <div>
        <h1 class="h3 mb-0">@Model.Title</h1>
        <div class="text-muted small">
            @Model.CategoryName
            &middot;
            @Model.ReleaseDate.ToString("MMMM d, yyyy")
            @if (Model.EndDate.HasValue)
            {
                <span> - @Model.EndDate.Value.ToString("MMMM d, yyyy")</span>
            }
        </div>
    </div>

    <div class="text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-2">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger me-2">Delete</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary">Back to list</a>
    </div>
</div>

<div class="row g-4">
    <!-- LEFT: Poster & gallery -->
    <div class="col-lg-5">
        <div class="card mb-3">
            @{
                // Resolve main image (handle absolute urls)
                string mainImg;
                if (!string.IsNullOrWhiteSpace(Model.MainImageUrl))
                {
                    mainImg = Uri.IsWellFormedUriString(Model.MainImageUrl, UriKind.Absolute)
                    ? Model.MainImageUrl
                    : ImgManager.GetImageWebPath(ImageType.Movie, Model.Slug, Model.MainImageUrl);
                }
                else
                {
                    mainImg = ImgManager.GetImageWebPath(ImageType.Movie, Model.Slug, null);
                }
            }

            <img src="@mainImg"
                 class="card-img-top"
                 alt="@Model.Title"
                 onerror="this.onerror=null;this.src='@Url.Content("~/images/defaults/movie-placeholder.png")';" />

            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-success me-1">Featured</span>
                        }
                        <span class="badge @(Model.Status == MovieStatus.NowShowing ? "bg-primary" : Model.Status == MovieStatus.Upcoming ? "bg-info" : "bg-secondary")">
                            @Model.Status
                        </span>
                    </div>

                    <div class="text-end">
                        <small class="text-muted">Duration: @Model.Duration min</small><br />
                        <small class="text-muted">Price: @Model.Price.ToString("C")</small>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.TrailerUrl) && Uri.IsWellFormedUriString(Model.TrailerUrl, UriKind.Absolute))
                {
                    <div class="ratio ratio-16x9 mb-2">
                        @* If it's YouTube link it's fine — browser will embed. Using iframe for common video hosts. *@
                        <iframe src="@Model.TrailerUrl" title="Trailer for @Model.Title" allowfullscreen></iframe>
                    </div>
                }

                <p class="mb-0 text-muted">Rating: @(Model.Rating.HasValue? Model.Rating.Value.ToString("0.0") : "Not rated")</p>
            </div>
        </div>

        @if (Model.AdditionalImageUrls?.Any() == true)
        {
            <div class="mb-3">
                <h6 class="mb-2">Gallery</h6>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var img in Model.AdditionalImageUrls)
                    {
                        var url = Uri.IsWellFormedUriString(img, UriKind.Absolute)
                        ? img
                        : ImgManager.GetImageWebPath(ImageType.Movie, Model.Slug, img);

                        <img src="@url"
                             alt="@Model.Title"
                             class="img-thumbnail"
                             style="width:100px; height:70px; object-fit:cover; cursor:pointer;"
                             onclick="openLightbox('@url')"
                             onerror="this.onerror=null;this.src='@Url.Content("~/images/defaults/placeholder.png")';" />
                    }
                </div>
            </div>
        }
    </div>

    <!-- RIGHT: Details -->
    <div class="col-lg-7">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">About</h5>
                <p class="card-text">@Model.Description</p>

                <dl class="row">
                    <dt class="col-sm-4">Director</dt>
                    <dd class="col-sm-8">@Model.Director</dd>

                    <dt class="col-sm-4">Release Date</dt>
                    <dd class="col-sm-8">@Model.ReleaseDate.ToString("MMMM d, yyyy")</dd>

                    <dt class="col-sm-4">Duration</dt>
                    <dd class="col-sm-8">@Model.Duration min</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">Rating</dt>
                    <dd class="col-sm-8">@((Model.Rating.HasValue) ? Model.Rating.Value.ToString("0.0") : "Not rated")</dd>

                    <dt class="col-sm-4">Language</dt>
                    <dd class="col-sm-8">@Model.Language</dd>

                    <dt class="col-sm-4">Country</dt>
                    <dd class="col-sm-8">@Model.Country ?? "-"</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Simple lightbox modal -->
<div class="modal fade" id="imageLightbox" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                <img id="lightboxImage" src="" alt="Preview" class="w-100 rounded" style="max-height:80vh; object-fit:contain;" />
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* small niceties for admin details page */
        .movie-overlay {
            display: none;
        }

        .img-thumbnail {
            cursor: pointer;
            transition: transform .15s ease;
        }

            .img-thumbnail:hover {
                transform: scale(1.03);
            }
    </style>
}

@section Scripts {
    <script>
        function openLightbox(url) {
            var img = document.getElementById('lightboxImage');
            img.src = url;
            var modal = new bootstrap.Modal(document.getElementById('imageLightbox'), {});
            modal.show();
        }
    </script>
}
