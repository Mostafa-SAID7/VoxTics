@using VoxTics.Areas.Admin.ViewModels.Movie
@model MovieViewModel
@{
    ViewData["Title"] = "Movie details";
}
<div class="container py-4">
    <a class="btn btn-sm btn-outline-secondary mb-3" href="@Url.Action("Index")">Back</a>
    <div class="row">
        <div class="col-md-3">
            @if (!string.IsNullOrWhiteSpace(Model.CurrentPosterImage))
            {
                <img src="@Model.CurrentPosterImage" class="img-fluid rounded" />
            }
        </div>
        <div class="col-md-9">
            <h3>@Model.Title</h3>
            <p>@Model.Description</p>
            <dl class="row">
                <dt class="col-sm-3">Release</dt>
                <dd class="col-sm-9">@Model.ReleaseDate:yyyy-MM-dd</dd>
                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.DurationInMinutes min</dd>
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.BasePrice.ToString("C")</dd>
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
                <dt class="col-sm-3">Categories</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.MovieCategories)</dd>
            </dl>
        </div>
    </div>
</div>
