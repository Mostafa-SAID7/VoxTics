@model VoxTics.Areas.Admin.ViewModels.Movie.MovieDetailViewModel

<h1>@Model.Title</h1>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.MainImageUrl))
        {
            <img src="@Model.MainImageUrl" class="img-fluid rounded mb-3" />
        }

        @if (Model.AdditionalImageUrls?.Any() == true)
        {
            <h5>Additional Images</h5>
            @foreach (var img in Model.AdditionalImageUrls)
            {
                <img src="@img" width="60" class="me-2 mb-2 rounded" />
            }
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.CategoryName</dd>

            <dt class="col-sm-4">Director</dt>
            <dd class="col-sm-8">@Model.Director</dd>

            <dt class="col-sm-4">Release Date</dt>
            <dd class="col-sm-8">@Model.ReleaseDate.ToShortDateString()</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Model.EndDate?.ToShortDateString()</dd>

            <dt class="col-sm-4">Duration</dt>
            <dd class="col-sm-8">@Model.Duration</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Model.Price</dd>

            <dt class="col-sm-4">Rating</dt>
            <dd class="col-sm-8">@Model.Rating</dd>

            <dt class="col-sm-4">Language</dt>
            <dd class="col-sm-8">@Model.Language</dd>

            <dt class="col-sm-4">Country</dt>
            <dd class="col-sm-8">@Model.Country</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Featured</dt>
            <dd class="col-sm-8">@Model.IsFeatured ? "Yes" : "No"</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
