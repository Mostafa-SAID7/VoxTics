@model VoxTics.Areas.Admin.ViewModels.Movie.MovieDetailViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<h1>@Model.Title</h1>

<p><strong>Director:</strong> @Model.Director</p>
<p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
<p><strong>Rating:</strong> @Model.Rating</p>
<p><strong>Price:</strong> $@Model.Price</p>
<p><strong>Language:</strong> @Model.Language</p>
<p><strong>Featured:</strong> @(Model.IsFeatured ? "Yes" : "No")</p>
<p><strong>Status:</strong> @Model.Status</p>

@if (Model.TrailerUrl != null)
{
    <p><a href="@Model.TrailerUrl" target="_blank">Watch Trailer</a></p>
}

