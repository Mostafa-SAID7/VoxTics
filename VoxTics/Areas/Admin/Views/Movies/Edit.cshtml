@model VoxTics.Areas.Admin.ViewModels.MovieVMs.MovieEditVM
@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Edit Movie</h3>
        <a asp-action="Index" asp-controller="Movies" asp-area="Admin" class="btn btn-light">Back to list</a>
    </div>

    <form asp-action="Edit" asp-controller="Movies" asp-area="Admin" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Cinema</label>
                <select asp-for="CinemaId" asp-items="Model.Cinemas" class="form-select"></select>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Status</label>
                <select asp-for="MovieStatus" class="form-select">
                    @foreach (var s in Enum.GetValues(typeof(VoxTics.Models.Enums.MovieStatus)).Cast<VoxTics.Models.Enums.MovieStatus>())
                    {
                        <option value="@s" @(Model.MovieStatus == s ? "selected" : "")>@s</option>
                    }
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Main Poster (replace)</label>
            <input asp-for="MainImage" type="file" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <div class="mt-2">
                    <img src="@Model.ImgUrl" style="height:100px;object-fit:cover;border-radius:4px" />
                </div>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Additional Images (multiple)</label>
            <input asp-for="UploadedImages" type="file" multiple class="form-control" />
        </div>

        @if (Model.ExistingImages?.Any() == true)
        {
            <div class="mb-3">
                <label class="form-label">Existing Images</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var img in Model.ExistingImages)
                    {
                        <div class="existing-image border p-2 text-center" style="width:140px">
                            <img src="@img.ImgUrl" style="height:80px;object-fit:cover;display:block;margin-bottom:6px" />
                            <button data-id="@img.Id" data-url="@Url.Action("RemoveImage", "Movies", new { area = "Admin" })" class="btn btn-sm btn-danger btn-remove-image">Remove</button>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="mb-3">
            <label class="form-label">Trailer URL</label>
            <input asp-for="TrailerUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Actors</label>
            <select asp-for="SelectedActorIds" asp-items="Model.Actors" multiple class="form-select"></select>
        </div>

        <div class="text-end">
            <a asp-action="Index" asp-controller="Movies" asp-area="Admin" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // AJAX remove image on Edit page (non-modal)
        $(function () {
            $(document).on('click', '.btn-remove-image', function (e) {
                e.preventDefault();
                if (!confirm('Remove this image?')) return;

                var $btn = $(this);
                var id = $btn.data('id');
                var url = $btn.data('url') || '/Admin/Movies/RemoveImage';
                // attach anti-forgery token if present
                var token = $('input[name="__RequestVerificationToken"]').first().val();
                var data = { id: id };
                if (token) data.__RequestVerificationToken = token;

                $.post(url, data).done(function (res) {
                    if (res && res.success) {
                        $btn.closest('.existing-image').remove();
                    } else {
                        alert('Failed to remove image.');
                    }
                }).fail(function (xhr) {
                    alert('Remove failed: ' + (xhr.statusText || xhr.status));
                });
            });
        });
    </script>
}
