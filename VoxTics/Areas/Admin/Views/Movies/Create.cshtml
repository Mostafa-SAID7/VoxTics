@model VoxTics.Areas.Admin.ViewModels.Movie.MovieCreateEditViewModel

@{
    ViewData["Title"] = "Create Movie";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">Create New Movie</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        @await Html.PartialAsync("_MovieForm", Model)

        <div class="row mt-4">
            <div class="col-12">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary-modern btn-modern">
                        <i class="fas fa-plus me-2"></i>Create Movie
                    </button>
                    <a asp-action="Index" class="btn btn-secondary-modern btn-modern">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/admin/movies/movie-form.js" asp-append-version="true"></script>
}