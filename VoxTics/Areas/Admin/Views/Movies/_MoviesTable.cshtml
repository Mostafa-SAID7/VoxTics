@model VoxTics.Areas.Admin.ViewModels.MovieViewModel

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Release</th>
            <th>Status</th>
            <th>Categories</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Created</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    <img src="@(!string.IsNullOrEmpty(movie.CurrentPosterImage) ? movie.CurrentPosterImage : "/images/default-movie.png")" width="60" class="img-thumbnail" />
                </td>
                <td>@movie.Title</td>
                <td>@movie.ReleaseDate.ToString("MMM dd, yyyy")</td>
                <td>@movie.Status</td>
                <td>
                    @foreach(var cat in movie.MovieCategories)
                    {
                        <span class="badge bg-info">@cat.Name</span>
                    }
                </td>
                <td>@movie.DurationInMinutes mins</td>
                <td>$@movie.BasePrice</td>
                <td>@movie.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>@(movie.IsActive ? "Yes" : "No")</td>
                <td>
                    <button class="btn btn-info btn-sm btnDetails" data-id="@movie.Id">Details</button>
                    <button class="btn btn-warning btn-sm btnEdit" data-id="@movie.Id">Edit</button>
                    <button class="btn btn-danger btn-sm btnDelete" data-id="@movie.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        @foreach(var page in Model.Movies.GetPageNumbers())
        {
            <li class="page-item @(page == Model.CurrentPage ? "active" : "")">
                <a href="#" class="page-link" data-page=""></a>
            </li>
        }
    </ul>
</nav>
