@model IEnumerable<VoxTics.Areas.Admin.ViewModels.MovieViewModel>
@using System.Globalization

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:72px">Poster</th>
            <th>Title</th>
            <th>Release</th>
            <th>Status</th>
            <th>Price</th>
            <th style="width:170px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                 
                </td>
                <td>
                    <div class="fw-bold">@m.Title</div>
                    <div class="text-muted small">@m.Description?.Length > 100 ? m.Description.Substring(0, 100) + "…" : m.Description</div>
                </td>
                <td>@m.ReleaseDate.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture)</td>
                <td>@m.Status</td>
                <td>@m.TotalCount.ToString("C")</td>
                <td>
                    <div class="table-actions">
                        <button class="btn btn-sm btn-outline-primary btn-edit-movie" data-id="@m.Id" title="Edit">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn btn-sm btn-outline-danger btn-delete-movie" data-id="@m.Id" title="Delete">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No movies found.</div>
}
