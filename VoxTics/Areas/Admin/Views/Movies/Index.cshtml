@model VoxTics.Helpers.PaginatedList<VoxTics.Areas.Admin.ViewModels.Movie.MovieListItemViewModel>
@{
    ViewData["Title"] = "Movies";
}

<div class="container py-4">
    <h2 class="mb-3">Movies</h2>

    <div class="d-flex justify-content-between mb-3">
        <form class="d-flex" method="get">
            <input type="text" name="search" class="form-control me-2" placeholder="Search movies..." value="@(ViewData["Search"] ?? "")" />
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
        <a asp-action="Create" class="btn btn-success">+ Add Movie</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Poster</th>
                <th>Title</th>
                <th>Category</th>
                <th>Release Date</th>
                <th>Price</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Items)
            {
                <tr>
                    <td>
                        <img src="~/uploads/movies/@movie.MainImageUrl" alt="@movie.Title" width="60" />
                    </td>
                    <td>@movie.Title</td>
                    <td>@movie.CategoryName</td>
                    <td>@movie.ReleaseDate.ToString("yyyy-MM-dd")</td>
                    <td>@movie.Price.ToString("C")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info me-1"><i class="bi bi-eye"></i></a>
                        <form asp-action="Delete" asp-route-id="@movie.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')"><i class="bi bi-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Pagination *@
    <nav>
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
                </li>
            }
            @foreach (var p in Model.GetPageNumbers())
            {
                <li class="page-item @(p == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
