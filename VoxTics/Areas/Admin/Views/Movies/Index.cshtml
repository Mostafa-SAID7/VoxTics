@model VoxTics.Helpers.PaginatedList<VoxTics.Areas.Admin.ViewModels.Movie.MovieListItemViewModel>

@{
    ViewData["Title"] = "Movies";
    
}

<h1>Movies</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3 d-flex justify-content-between">
    <form method="get" asp-action="Index" class="d-flex">
        <input type="text" name="search" value="@ViewBag.search" class="form-control me-2" placeholder="Search..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <a class="btn btn-success" asp-action="Create">Add New Movie</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.ActionLink("Title", "Index", new { sortColumn = "Title", sortDescending = ViewBag.sortDescending == "false" })</th>
            <th>Category</th>
            <th>@Html.ActionLink("Release Date", "Index", new { sortColumn = "ReleaseDate", sortDescending = ViewBag.sortDescending == "false" })</th>
            <th>Main Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.CategoryName</td>
                <td>@movie.ReleaseDate.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(movie.MainImageUrl))
                    {
                        <img src="@movie.MainImageUrl" width="50" class="rounded" />
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@movie.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.HasPreviousPage)
{
    <a asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" class="btn btn-secondary">Previous</a>
}
@if (Model.HasNextPage)
{
    <a asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" class="btn btn-secondary">Next</a>
}
