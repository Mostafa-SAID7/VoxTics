@model IEnumerable<VoxTics.Areas.Admin.ViewModels.Movie.MovieListItemViewModel>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th style="width:90px">Poster</th>
                <th>Title</th>
                <th>Category</th>
                <th style="width:120px">Showtimes</th>
                <th style="width:220px"></th>
            </tr>
        </thead>
        <tbody>
            @if (!(Model?.Any() ?? false))
            {
                <tr>
                    <td colspan="5" class="text-center">No movies found.</td>
                </tr>
            }
            else
            {
                foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(movie.MainImageUrl))
                            {
                                <img src="@movie.MainImageUrl" alt="@movie.Title" width="60" />
                            }
                            else
                            {
                                <img src="~/images/defaults/placeholder.png" alt="Default Poster" width="60" />
                            }
                        </td>
                        <td>@movie.Title</td>
                        <td>@movie.CategoryName</td>
                        <td>@movie.ShowtimeCount</td>
                        <td>
                            <a href="@Url.Action("Details", "Movies", new { area = "Admin", id = movie.Id })"
                               class="btn btn-sm btn-primary js-open-modal"
                               data-title="Details: @movie.Title">Details</a>

                            <a href="@Url.Action("Edit", "Movies", new { area = "Admin", id = movie.Id })"
                               class="btn btn-sm btn-warning js-open-modal"
                               data-title="Edit: @movie.Title">Edit</a>

                            <a href="@Url.Action("Delete", "Movies", new { area = "Admin", id = movie.Id })"
                               class="btn btn-sm btn-danger js-open-modal"
                               data-title="Delete: @movie.Title">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
