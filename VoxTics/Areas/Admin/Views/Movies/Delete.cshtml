@model VoxTics.Models.Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Delete Movie</h3>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this movie?</h4>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Cinema:</strong> @Model.Cinema?.Name</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Status:</strong> @Model.MovieStatus</p>
    <p><strong>Images:</strong></p>
    @foreach (var img in Model.MovieImgs)
    {
        <img src="@img.ImgUrl" width="80" height="80" class="me-1" />
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

