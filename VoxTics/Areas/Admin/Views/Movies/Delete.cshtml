@model VoxTics.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Delete Movie</h3>
        <a asp-action="Index" asp-controller="Movies" asp-area="Admin" class="btn btn-light">Back to list</a>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>

            <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Cinema</dt>
                <dd class="col-sm-9">@Model.Cinema?.Name</dd>

                <dt class="col-sm-3">Dates</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("0.00")</dd>
            </dl>

            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="@Model.ImgUrl" style="max-height:200px;object-fit:cover;border-radius:6px" />
            }

            <form asp-action="DeleteConfirmed" asp-controller="Movies" asp-area="Admin" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="text-end">
                    <a asp-action="Index" asp-controller="Movies" asp-area="Admin" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Yes — Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
