@model VoxTics.Helpers.PaginatedList<VoxTics.Areas.Admin.ViewModels.BookingViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create Booking</a>
</p>

<form method="get" class="mb-3">
    <input type="text" name="searchTerm"
           placeholder="Search ..."
           class="form-control mb-2"
           value="@Context.Request.Query["searchTerm"]" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Booking #</th>
            <th>User</th>
            <th>Movie</th>
            <th>Cinema / Hall</th>
            <th>Showtime</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Items)
        {
            <tr>
                <td>@booking.BookingNumber</td>
                <td>@booking.UserName</td>
                <td>@booking.MovieTitle</td>
                <td>@booking.CinemaName / @booking.HallName</td>
                <td>@booking.ShowDateTimeFormatted</td>
                <td>@booking.FormattedTotalPrice</td>
                <td><span class="@booking.StatusBadge">@booking.Status</span></td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Pagination *@
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-route-pageNumber="@i">@i</a>
            </li>
        }
    </ul>
</nav>
