@model IEnumerable<VoxTics.Areas.Admin.ViewModels.BookingViewModel>

@{
    ViewData["Title"] = "Bookings Management";
}

<h2>Bookings Management</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Booking #</th>
            <th>User</th>
            <th>Movie</th>
            <th>Cinema / Hall</th>
            <th>Showtime</th>
            <th>Seats</th>
            <th>Total</th>
            <th>Status</th>
            <th>Payment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingReference</td>
                <td>@booking.UserName (@booking.UserEmail)</td>
                <td>@booking.MovieTitle</td>
                <td>@booking.CinemaName / @booking.HallName</td>
                <td>@booking.ShowDateTimeFormatted</td>
                <td>@string.Join(", ", booking.SeatNumbers)</td>
                <td>@booking.FormattedTotalPrice</td>
                <td>
                    <span class="@booking.StatusBadge">@booking.Status</span>
                </td>
                <td>@booking.PaymentStatus</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-primary">View</a>
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-warning">Edit</a>
                    @if (booking.CanBeCancelled)
                    {
                        <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
