@model VoxTics.Areas.Admin.ViewModels.Booking.BookingDetailsViewModel

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Booking Number</dt>
            <dd class="col-sm-9">@Model.BookingReference</dd>

            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.UserName (@Model.UserEmail)</dd>

            <dt class="col-sm-3">Movie</dt>
            <dd class="col-sm-9">@Model.MovieTitle</dd>

            <dt class="col-sm-3">Cinema</dt>
            <dd class="col-sm-9">@Model.CinemaName</dd>

            <dt class="col-sm-3">Hall</dt>
            <dd class="col-sm-9">@Model.HallName</dd>

            <dt class="col-sm-3">Showtime</dt>
            <dd class="col-sm-9">@Model.ShowDateTimeFormatted</dd>

            <dt class="col-sm-3">Seats</dt>
            <dd class="col-sm-9">@string.Join(", ", Model.SeatNumbers)</dd>

            <dt class="col-sm-3">Number of Tickets</dt>
            <dd class="col-sm-9">@Model.NumberOfTickets</dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>

            <dt class="col-sm-3">Discount</dt>
            <dd class="col-sm-9">@Model.DiscountAmount.ToString("C")</dd>

            <dt class="col-sm-3">Final Amount</dt>
            <dd class="col-sm-9">@Model.FinalAmount.ToString("C")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Payment Status</dt>
            <dd class="col-sm-9">@Model.PaymentStatus</dd>

            @if (!string.IsNullOrEmpty(Model.PaymentMethod))
            {
                <dt class="col-sm-3">Payment Method</dt>
                <dd class="col-sm-9">@Model.PaymentMethod</dd>
            }

            @if (!string.IsNullOrEmpty(Model.TransactionId))
            {
                <dt class="col-sm-3">Transaction ID</dt>
                <dd class="col-sm-9">@Model.TransactionId</dd>
            }

            @if (Model.PaymentDate.HasValue)
            {
                <dt class="col-sm-3">Payment Date</dt>
                <dd class="col-sm-9">@Model.PaymentDate.Value.ToString("yyyy-MM-dd HH:mm")</dd>
            }

            @if (!string.IsNullOrEmpty(Model.CancellationReason))
            {
                <dt class="col-sm-3">Cancellation Reason</dt>
                <dd class="col-sm-9">@Model.CancellationReason</dd>
            }

            <dt class="col-sm-3">Booking Date</dt>
            <dd class="col-sm-9">@Model.BookingDateFormatted</dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
