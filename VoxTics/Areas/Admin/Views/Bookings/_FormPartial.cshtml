@model VoxTics.Areas.Admin.ViewModels.BookingViewModel

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post" class="needs-validation">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">User</label>
        <select asp-for="UserId" class="form-select" asp-items="Model.Users"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ShowtimeId" class="form-label">Showtime</label>
        <select asp-for="ShowtimeId" class="form-select" asp-items="Model.Showtimes"></select>
        <span asp-validation-for="ShowtimeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SeatNumbers" class="form-label">Seats (comma separated IDs)</label>
        <input asp-for="SeatNumbers" class="form-control" />
        <small class="form-text text-muted">Enter seat numbers or IDs separated by commas (example: A1,A2)</small>
        <span asp-validation-for="SeatNumbers" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label">Total Amount</label>
        <input asp-for="TotalAmount" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    <script>
        // re-enable unobtrusive validation for dynamically injected partials
        $.validator.unobtrusive.parse('#entityModalBody');
    </script>
}
