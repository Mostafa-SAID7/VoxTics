@model IEnumerable<VoxTics.Areas.Admin.ViewModels.Booking.BookingViewModel>

<table class="table table-striped" id="bookingTable">
    <thead>
        <tr>
            <th>Booking #</th>
            <th>User</th>
            <th>Movie</th>
            <th>Cinema</th>
            <th>Date</th>
            <th>Tickets</th>
            <th>Total</th>
            <th>Status</th>
            <th>Payment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr id="bookingRow_@booking.BookingId">
        
                <td>
                    <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-sm btn-info">View</a>

                </td>
            </tr>
        }
    </tbody>
</table>
