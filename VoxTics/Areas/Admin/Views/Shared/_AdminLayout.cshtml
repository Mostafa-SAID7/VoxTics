
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="flex-column bg-dark text-white p-3" style="width: 220px; min-height: 100vh;">
            <h4 class="text-center">Admin Panel</h4>
            <hr />
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Home", new { area = "Admin" })">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Movies", new { area = "Admin" })">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Actors", new { area = "Admin" })">Actors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Categories", new { area = "Admin" })">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Cinemas", new { area = "Admin" })">Cinemas</a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 p-3">
            <header class="mb-4">
                <h2>@ViewData["Title"]</h2>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
