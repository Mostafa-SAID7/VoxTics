@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MovieTickets</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    @* CSS libs *@
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)


</head>
<body>
    <div id="page-loader"><div class="spinner"></div></div>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white flex-shrink-0 p-3" style="width: 220px; height: 100vh;">
            <a class="d-flex align-items-center mb-3 text-white text-decoration-none" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <span class="fs-4">⚙ Admin</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link text-white">Dashboard</a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Movies" asp-action="Index" class="nav-link text-white">Manage Movies</a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link text-white">Manage Users</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-warning">← Back to Site</a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 p-4">
            <header>
                <h2 class="mb-4">@ViewData["Title"]</h2>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>


    @* JS libs *@
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validate-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        // Global helpers to show/hide loader
        window.showLoader = () => { document.getElementById('page-loader').style.display = 'flex'; };
        window.hideLoader = () => { document.getElementById('page-loader').style.display = 'none'; };

        // Example: show during any jQuery AJAX call automatically
        $(document).ajaxStart(showLoader).ajaxStop(hideLoader);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>