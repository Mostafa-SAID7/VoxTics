@* /Areas/Admin/Views/Shared/_LayoutAdmin.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white flex-shrink-0 p-3" style="width: 220px; height: 100vh;">
            <a class="d-flex align-items-center mb-3 text-white text-decoration-none" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <span class="fs-4">⚙ Admin</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link text-white">Dashboard</a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Movies" asp-action="Index" class="nav-link text-white">Manage Movies</a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link text-white">Manage Users</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-warning">← Back to Site</a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 p-4">
            <header>
                <h2 class="mb-4">@ViewData["Title"]</h2>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
