@model VoxTics.Areas.Admin.ViewModels.CinemaViewModel
<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")"
      asp-controller="Cinemas" asp-area="Admin" method="post" enctype="multipart/form-data" id="cinema-form">
    @if (Model.Id != 0)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageFile">Image</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="image" class="img-thumbnail mt-2" style="max-width:120px" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
