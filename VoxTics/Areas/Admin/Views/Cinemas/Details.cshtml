@model VoxTics.Areas.Admin.ViewModels.Cinema.CinemaDetailsViewModel
@{
    ViewData["Title"] = "Cinema Details";
}
@inject VoxTics.Helpers.ImgsHelper.ImageManager ImageManager

<div class="d-flex justify-content-between mb-3">
    <h2>@Model.Name</h2>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <img id="previewImage"
             src="@ImageManager.GetImageWebPath(ImageType.Cinema, Model.Name, Model.DisplayImage)"
             alt="@Model.Name"
             class="img-thumbnail"
             style="width:200px; height:200px;"/>
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone:</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">Address:</dt>
            <dd class="col-sm-8">@Model.Address, @Model.City, @Model.State, @Model.Country, @Model.PostalCode</dd>

            <dt class="col-sm-4">Website:</dt>
            <dd class="col-sm-8">@Model.Website</dd>

            <dt class="col-sm-4">Slug:</dt>
            <dd class="col-sm-8">@Model.Slug</dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8"><span class="@Model.StatusBadge">@(Model.IsActive ? "Active" : "Inactive")</span></dd>

            <dt class="col-sm-4">Halls:</dt>
            <dd class="col-sm-8">@Model.HallCount</dd>

            <dt class="col-sm-4">Total Seats:</dt>
            <dd class="col-sm-8">@Model.TotalSeats</dd>

            <dt class="col-sm-4">Showtimes:</dt>
            <dd class="col-sm-8">@Model.ShowtimeCount</dd>
        </dl>
    </div>
</div>

<div class="mb-4">
    <h4>Halls</h4>
    <ul>
        @foreach(var hall in Model.Halls)
        {
            <li>@hall</li>
        }
    </ul>

    <h4>Showtimes</h4>
    <ul>
        @foreach(var showtime in Model.Showtimes)
        {
            <li>@showtime</li>
        }
    </ul>

    <h4>Social Media Links</h4>
    <ul>
        @foreach(var link in Model.SocialMediaLinks)
        {
            <li>@link</li>
        }
    </ul>
</div>
