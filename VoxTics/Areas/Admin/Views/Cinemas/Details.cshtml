@model VoxTics.Areas.Admin.ViewModels.Cinema.CinemaDetailsViewModel

@{
    ViewData["Title"] = "Cinema Details";
}

<h1>@Model.Name</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <img src="@Model.DisplayImage" alt="@Model.Name" class="img-fluid img-thumbnail" />
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address, @Model.City, @Model.State, @Model.Country</dd>

            <dt class="col-sm-3">Postal Code</dt>
            <dd class="col-sm-9">@Model.PostalCode</dd>

            <dt class="col-sm-3">Website</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Website))
                {
                    <a href="@Model.Website" target="_blank">@Model.Website</a>
                }
            </dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="@Model.StatusBadge">@((Model.IsActive) ? "Active" : "Inactive")</span></dd>

            <dt class="col-sm-3">Halls</dt>
            <dd class="col-sm-9">@Model.HallCount</dd>

            <dt class="col-sm-3">Total Seats</dt>
            <dd class="col-sm-9">@Model.TotalSeats</dd>

            <dt class="col-sm-3">Showtimes</dt>
            <dd class="col-sm-9">@Model.ShowtimeCount</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
