@model List<VoxTics.Areas.Admin.ViewModels.CinemaViewModel>

@{
    ViewData["Title"] = "Cinemas";
}

<h2>Cinemas</h2>

<div class="mb-3">
    <button class="btn btn-primary" id="btnCreateCinema">Add Cinema</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>City</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Halls</th>
            <th>Showtimes</th>
            <th>Active</th>
            <th>Created</th>
            <th>Modified</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="cinemaTableBody">
        @foreach (var cinema in Model)
        {
            <tr>
                <td>
                    <img src="@cinema.DisplayImage" width="80" class="img-thumbnail" />
                </td>
                <td>@cinema.Name</td>
                <td>@cinema.City</td>
                <td>@cinema.Address</td>
                <td>@cinema.Phone</td>
                <td>@cinema.HallCount</td>
                <td>@cinema.ShowtimeCount</td>
                <td>@(cinema.IsActive ? "Yes" : "No")</td>
                <td>@cinema.CreatedDateFormatted</td>
                <td>@cinema.ModifiedDateFormatted</td>
                <td>
                    <button class="btn btn-info btn-sm btnDetails" data-id="@cinema.Id">Details</button>
                    <button class="btn btn-warning btn-sm btnEdit" data-id="@cinema.Id">Edit</button>
                    <button class="btn btn-danger btn-sm btnDelete" data-id="@cinema.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="cinemaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="cinemaModalContent">
            <!-- Partial view will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Create
            $("#btnCreateCinema").click(function() {
                $.get('@Url.Action("Create")', function(data) {
                    $("#cinemaModalContent").html(data);
                    $("#cinemaModal").modal("show");
                });
            });

            // Edit
            $(".btnEdit").click(function() {
                const id = $(this).data("id");
                $.get('@Url.Action("Edit")/' + id, function(data) {
                    $("#cinemaModalContent").html(data);
                    $("#cinemaModal").modal("show");
                });
            });

            // Details
            $(".btnDetails").click(function() {
                const id = $(this).data("id");
                $.get('@Url.Action("Details")/' + id, function(data) {
                    $("#cinemaModalContent").html(data);
                    $("#cinemaModal").modal("show");
                });
            });

            // Delete
            $(".btnDelete").click(function() {
                const id = $(this).data("id");
                if(confirm("Are you sure you want to delete this cinema?")) {
                    $.post('@Url.Action("Delete")/' + id, { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() }, function(result) {
                        if(result.success) location.reload();
                        else alert(result.message);
                    });
                }
            });
        });
    </script>
}
