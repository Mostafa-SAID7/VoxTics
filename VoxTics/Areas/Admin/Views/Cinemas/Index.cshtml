@model VoxTics.Helpers.PaginatedList<VoxTics.Areas.Admin.ViewModels.Cinema.CinemaViewModel>
@inject VoxTics.Helpers.ImgsHelper.ImageManager ImageManager

@{
    ViewData["Title"] = "Cinemas";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Cinemas</h2>
    <a class="btn btn-primary" asp-action="Create">Create New Cinema</a>
</div>

<form class="row mb-4" method="get">
    <div class="col-md-4">
        <input type="text" name="search" class="form-control" placeholder="Search by name..." value="@ViewBag.Search" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-primary">Search</button>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Halls</th>
            <th>Total Seats</th>
            <th>Showtimes</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cinema in Model)
        {
            <tr>
                <td>
                    <img src="@ImageManager.GetImageWebPath(ImageType.Cinema, cinema.Name, cinema.DisplayImage)"
                         alt="@cinema.Name"
                         class="img-thumbnail"
                         style="width:80px; height:80px;" />
                </td>
                <td>@cinema.Name</td>
                <td>@cinema.Email</td>
                <td>@cinema.Phone</td>
                <td>@cinema.HallCount</td>
                <td>@cinema.TotalSeats</td>
                <td>@cinema.ShowtimeCount</td>
                <td>
                    @if (cinema.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@cinema.Id">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@cinema.Id">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@cinema.Id" class="d-inline" onsubmit="return confirm('Are you sure?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
            </li>
        }
    </ul>
</nav>
