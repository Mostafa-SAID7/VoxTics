@model List<VoxTics.Areas.Admin.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<div class="mb-3">
    <button class="btn btn-primary" id="btnCreateCategory">Create Category</button>
</div>

<div class="mb-3">
    <input type="text" id="searchInput" class="form-control w-25 d-inline-block" placeholder="Search..." />
    <button class="btn btn-secondary" id="btnSearch">Search</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Movies</th>
            <th>Active</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="categoryTableBody">
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.Description</td>
                <td>@cat.MovieCount</td>
                <td>@(cat.IsActive ? "Yes" : "No")</td>
                <td>@cat.CreatedAtFormatted</td>
                <td>@cat.UpdatedAtFormatted</td>
                <td>
                    <button class="btn btn-warning btn-sm btnEdit" data-id="@cat.Id">Edit</button>
                    <button class="btn btn-danger btn-sm btnDelete" data-id="@cat.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="categoryModalContent">
            <!-- Partial view will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Create
            $("#btnCreateCategory").click(function() {
                $.get('@Url.Action("Create")', function(data) {
                    $("#categoryModalContent").html(data);
                    $("#categoryModal").modal("show");
                });
            });

            // Edit
            $(".btnEdit").click(function() {
                const id = $(this).data("id");
                $.get('@Url.Action("Edit")/' + id, function(data) {
                    $("#categoryModalContent").html(data);
                    $("#categoryModal").modal("show");
                });
            });

            // Delete
            $(".btnDelete").click(function() {
                const id = $(this).data("id");
                $.get('@Url.Action("Delete")/' + id, function(data) {
                    $("#categoryModalContent").html(data);
                    $("#categoryModal").modal("show");
                });
            });

            // Optional: Search
            $("#btnSearch").click(function() {
                const term = $("#searchInput").val();
                window.location.href = '@Url.Action("Index")?search=' + term;
            });
        });
    </script>
}
