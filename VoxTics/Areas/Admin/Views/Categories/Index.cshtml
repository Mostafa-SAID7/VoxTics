@model VoxTics.Helpers.PaginatedList<VoxTics.Areas.Admin.ViewModels.Category.CategoryViewModel>

@* Styles are now included in the unified design system *@

<h2 class="categories-title">Categories</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="category-toolbar">
    <form method="get" class="d-flex">
        <input type="text" name="search" value="@ViewBag.Search" placeholder="Search..." />
        <button type="submit" class="btn btn-primary ms-2">Search</button>
    </form>
    <a asp-action="Create" class="btn btn-success">+ Add New Category</a>
</div>

<table class="category-table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortColumn="Name"
                   asp-route-sortDescending="@(ViewBag.SortColumn == "Name" && !ViewBag.SortDescending)">
                    Name @(ViewBag.SortColumn == "Name" ? (ViewBag.SortDescending ? "▼" : "▲") : "")
                </a>
            </th>
            <th>Slug</th>
            <th>Description</th>
            <th>Movie Count</th>
            <th>Status</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var category in Model)
            {
                <tr>
                    <td data-label="Name">@category.Name</td>
                    <td data-label="Slug">@category.Slug</td>
                    <td data-label="Description">@(!string.IsNullOrEmpty(category.Description) ? category.Description : "-")</td>
                    <td data-label="Movies">@category.MovieCount</td>
                    <td data-label="Status">
                        <span class="@category.StatusBadge">
                            @(category.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td data-label="Actions" class="text-center category-actions">
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No categories found.</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center mt-4">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex - 1, search = ViewBag.Search })">Previous</a>
            </li>
            @foreach (var p in Model.GetPageNumbers())
            {
                <li class="page-item @(p == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = p, search = ViewBag.Search })">@p</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex + 1, search = ViewBag.Search })">Next</a>
            </li>
        </ul>
    </nav>
}
@section Scripts {
    <script src="~/js/admin/category/category-index.js"></script>
}