@model VoxTics.Areas.Admin.ViewModels.Category.CategoryDetailsViewModel
@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Slug:</strong> @Model.Slug
</div>
<div class="mb-3">
    <strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)
</div>
<div class="mb-3">
    <strong>Status:</strong>
    <span class="@(Model.IsActive ? "badge bg-success" : "badge bg-secondary")">
        @(Model.IsActive ? "Active" : "Inactive")
    </span>
</div>
<div class="mb-3">
    <strong>Movie Count:</strong> @Model.MovieCount
</div>
<div class="mb-3">
    <strong>Created:</strong> @Model.CreatedAtFormatted
</div>
@if (Model.UpdatedAtFormatted != null)
{
    <div class="mb-3">
        <strong>Updated:</strong> @Model.UpdatedAtFormatted
    </div>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
