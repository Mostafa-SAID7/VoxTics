@model VoxTics.Areas.Admin.ViewModels.Category.CategoryCreateEditViewModel
@{
    var isEdit = Model.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Category" : "Create Category";
}
@* Styles are now included in the unified design system *@
<div class="category-card card-glass p-4 shadow-lg animated-fade-in">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="category-form needs-validation" novalidate>
        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div class="mb-3 form-floating">
            <input asp-for="Name" class="form-control" id="CategoryName" placeholder="Category Name" />
            <label for="CategoryName">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 form-floating">
            <input asp-for="Slug" class="form-control" id="CategorySlug" placeholder="Slug" />
            <label for="CategorySlug">Slug</label>
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        <div class="mb-3 form-floating">
            <textarea asp-for="Description" class="form-control" id="CategoryDescription" placeholder="Description" style="height:100px;"></textarea>
            <label for="CategoryDescription">Description</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-check form-switch mb-4">
            <input asp-for="IsActive" class="form-check-input" id="CategoryIsActive" />
            <label class="form-check-label" for="CategoryIsActive">Active</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-gradient btn-lg">
                @(isEdit ? "Save Changes" : "Create")
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>



