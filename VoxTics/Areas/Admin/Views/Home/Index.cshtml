@model VoxTics.Areas.Admin.ViewModels.Admin.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Container -->
<div class="p-6 space-y-6 bg-gray-50 min-h-screen">

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <div class="bg-white shadow rounded-lg p-5 flex flex-col items-center">
            <h3 class="text-gray-500 text-sm">Total Movies</h3>
            <span class="text-2xl font-bold text-gray-800">@Model.TotalMovies</span>
        </div>
        <div class="bg-white shadow rounded-lg p-5 flex flex-col items-center">
            <h3 class="text-gray-500 text-sm">Total Users</h3>
            <span class="text-2xl font-bold text-gray-800">@Model.TotalUsers</span>
        </div>
        <div class="bg-white shadow rounded-lg p-5 flex flex-col items-center">
            <h3 class="text-gray-500 text-sm">Total Bookings</h3>
            <span class="text-2xl font-bold text-gray-800">@Model.TotalBookings</span>
        </div>
        <div class="bg-white shadow rounded-lg p-5 flex flex-col items-center">
            <h3 class="text-gray-500 text-sm">Total Revenue</h3>
            <span class="text-2xl font-bold text-green-600">@Model.FormattedTotalRevenue</span>
        </div>
    </div>

    <!-- Revenue & Bookings Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
        <div class="bg-white shadow rounded-lg p-5">
            <h4 class="text-gray-700 font-semibold mb-4">Monthly Revenue</h4>
            <canvas id="revenueChart" class="w-full h-64"></canvas>
        </div>
        <div class="bg-white shadow rounded-lg p-5">
            <h4 class="text-gray-700 font-semibold mb-4">Monthly Bookings</h4>
            <canvas id="bookingsChart" class="w-full h-64"></canvas>
        </div>
    </div>

    <!-- Movies by Status & Bookings by Status -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
        <div class="bg-white shadow rounded-lg p-5">
            <h4 class="text-gray-700 font-semibold mb-4">Movies by Status</h4>
            <ul class="space-y-2">
                @foreach (var kv in Model.MoviesByStatus)
                {
                    <li class="flex justify-between">
                        <span>@kv.Key</span>
                        <span>@kv.Value</span>
                    </li>
                }
            </ul>
        </div>
        <div class="bg-white shadow rounded-lg p-5">
            <h4 class="text-gray-700 font-semibold mb-4">Bookings by Status</h4>
            <ul class="space-y-2">
                @foreach (var kv in Model.BookingsByStatus)
                {
                    <li class="flex justify-between">
                        <span>@kv.Key</span>
                        <span>@kv.Value</span>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-6">
        <!-- Recent Movies -->
        <div class="bg-white shadow rounded-lg p-5 overflow-auto">
            <h4 class="text-gray-700 font-semibold mb-4">Recent Movies</h4>
            <table class="w-full text-left text-sm">
                <thead>
                    <tr class="border-b">
                        <th class="p-2">Title</th>
                        <th class="p-2">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.RecentMovies)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="p-2">@movie.Title</td>
                            <td class="p-2">@movie.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Recent Bookings -->
        <div class="bg-white shadow rounded-lg p-5 overflow-auto">
            <h4 class="text-gray-700 font-semibold mb-4">Recent Bookings</h4>
            <table class="w-full text-left text-sm">
                <thead>
                    <tr class="border-b">
                        <th class="p-2">User</th>
                        <th class="p-2">Cinema</th>
                        <th class="p-2">Movie</th>
                        <th class="p-2">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.RecentBookings)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="p-2">@booking.UserName</td>
                            <td class="p-2">@booking.CinemaName</td>
                            <td class="p-2">@booking.MovieTitle</td>
                            <td class="p-2">@booking.TotalPrice.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Recent Users -->
        <div class="bg-white shadow rounded-lg p-5 overflow-auto">
            <h4 class="text-gray-700 font-semibold mb-4">Recent Users</h4>
            <table class="w-full text-left text-sm">
                <thead>
                    <tr class="border-b">
                        <th class="p-2">Username</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.RecentUsers)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="p-2">@user.ApplicationName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Popular Movies & Cinemas -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
        <div class="bg-white shadow rounded-lg p-5 overflow-auto">
            <h4 class="text-gray-700 font-semibold mb-4">Popular Movies</h4>
            <ul class="list-disc list-inside">
                @foreach (var movie in Model.PopularMovies)
                {
                    <li>@movie.Title</li>
                }
            </ul>
        </div>
        <div class="bg-white shadow rounded-lg p-5 overflow-auto">
            <h4 class="text-gray-700 font-semibold mb-4">Popular Cinemas</h4>
            <ul class="list-disc list-inside">
                @foreach (var cinema in Model.PopularCinemas)
                {
                    <li>@cinema.Name</li>
                }
            </ul>
        </div>
    </div>
</div>

<!-- Scripts -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const bookingsCtx = document.getElementById('bookingsChart').getContext('2d');

        const revenueLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyRevenueSeries.Keys));
        const revenueData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyRevenueSeries.Values));

        const bookingsLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyBookings.Keys));
        const bookingsData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyBookings.Values));

        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: revenueLabels,
                datasets: [{
                    label: 'Revenue',
                    data: revenueData,
                    backgroundColor: 'rgba(34,197,94,0.2)',
                    borderColor: 'rgba(34,197,94,1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: { responsive: true, plugins: { legend: { display: true } } }
        });

        new Chart(bookingsCtx, {
            type: 'bar',
            data: {
                labels: bookingsLabels,
                datasets: [{
                    label: 'Bookings',
                    data: bookingsData,
                    backgroundColor: 'rgba(59,130,246,0.6)',
                    borderColor: 'rgba(59,130,246,1)',
                    borderWidth: 1
                }]
            },
            options: { responsive: true, plugins: { legend: { display: true } } }
        });
    </script>
}
