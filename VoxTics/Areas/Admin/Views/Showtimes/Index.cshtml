@model IEnumerable<VoxTics.Areas.Admin.ViewModels.Showtime.ShowtimeViewModel>

@{
    ViewData["Title"] = "Showtimes";
}

<h1>Showtimes</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Showtime</a>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search..." class="form-control w-25 d-inline" />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Cinema</th>
            <th>Hall</th>
            <th>Start Time</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var showtime in Model)
        {
            <tr>
                <td>@showtime.MovieTitle</td>
                <td>@showtime.CinemaName</td>
                <td>@showtime.HallName</td>
                <td>@showtime.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@showtime.Duration</td>
                <td>@showtime.Price.ToString("C")</td>
                <td>@showtime.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@showtime.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@showtime.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@showtime.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize); i++)
        {
            <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
            </li>
        }
    </ul>
</nav>
