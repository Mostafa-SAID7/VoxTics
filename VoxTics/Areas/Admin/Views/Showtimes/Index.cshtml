@model IEnumerable<VoxTics.Models.Entities.Showtime>
@using VoxTics.Models.Enums

@{
    ViewData["Title"] = "Showtimes";
}

<h1>Showtimes</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Cinema</th>
            <th>Hall</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var showtime in Model)
        {
            <tr>
                <td>@showtime.Movie.Title</td>
                <td>@showtime.Cinema.Name</td>
                <td>@showtime.Hall.Name</td>
                <td>@showtime.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@showtime.StartTime.AddMinutes(showtime.Duration).ToString("yyyy-MM-dd HH:mm")</td>
                <td>@showtime.Price.ToString("C")</td>
                <td>
                    <span class="badge @(showtime.Status switch {
                        ShowtimeStatus.Scheduled => "bg-info",
                        ShowtimeStatus.Active => "bg-success",
                        ShowtimeStatus.Cancelled => "bg-danger",
                        _ => "bg-secondary"
                    })">@showtime.Status</span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@showtime.Id" class="btn btn-sm btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@showtime.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@showtime.Id" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@showtime.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this showtime?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paging info -->
<div>
    Page @ViewBag.PageIndex of @((int)Math.Ceiling((decimal)ViewBag.TotalCount / ViewBag.PageSize))
</div>
