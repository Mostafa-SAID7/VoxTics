@model VoxTics.Models.Entities.Showtime
@using VoxTics.Models.Enums

@{
    ViewData["Title"] = "Showtime Details";
}

<h1>Showtime Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Movie</dt>
            <dd class="col-sm-9">@Model.Movie.Title</dd>

            <dt class="col-sm-3">Cinema</dt>
            <dd class="col-sm-9">@Model.Cinema.Name</dd>

            <dt class="col-sm-3">Hall</dt>
            <dd class="col-sm-9">@Model.Hall.Name</dd>

            <dt class="col-sm-3">Start Time</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">End Time</dt>
            <dd class="col-sm-9">@Model.StartTime.AddMinutes(Model.Duration).ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.Duration mins</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status switch {
                    ShowtimeStatus.Scheduled => "bg-info",
                    ShowtimeStatus.Active => "bg-success",
                    ShowtimeStatus.Cancelled => "bg-danger",
                    _ => "bg-secondary"
                })">@Model.Status</span>
            </dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
