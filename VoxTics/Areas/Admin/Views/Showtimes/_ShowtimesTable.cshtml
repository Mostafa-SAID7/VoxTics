@model List<VoxTics.Areas.Admin.ViewModels.ShowtimeViewModel>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Cinema</th>
            <th>Hall</th>
            <th>Date & Time</th>
            <th>Price</th>
            <th>Available Seats</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.MovieTitle</td>
                <td>@s.CinemaName</td>
                <td>@s.HallName</td>
                <td>@s.ShowDateTimeFormatted</td>
                <td>@s.FormattedPrice</td>
                <td>@s.AvailableSeats / @s.TotalSeats</td>
                <td>
                    <span class="@s.StatusBadge">@s.StatusText</span>
                </td>
                <td>
                    <button class="btn btn-info btn-sm btnDetails" data-id="@s.Id">Details</button>
                    <button class="btn btn-warning btn-sm btnEdit" data-id="@s.Id">Edit</button>
                    <button class="btn btn-danger btn-sm btnDelete" data-id="@s.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
