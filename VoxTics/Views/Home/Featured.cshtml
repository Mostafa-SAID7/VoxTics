@model IEnumerable<VoxTics.Models.ViewModels.Movie.MovieVM>
@{
    ViewData["Title"] = "Featured Movies";
}

<h2>🎬 Featured Movies</h2>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@movie.MainImageUrl ?? " /images/default-movie.jpg"" class="card-img-top" alt="@movie.Title" />
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                </div>
            </div>
        </div>
    }
</div>
