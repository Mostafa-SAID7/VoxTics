@using VoxTics.Models.ViewModels.Home
@model HomeVM
@{
    ViewData["Title"] = "Home";
}

<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/countup.js/2.0.7/countUp.min.js"></script>

<div class="container-fluid p-0">

    <!-- Hero Banner -->
    <section class="hero-banner text-white text-center d-flex align-items-center justify-content-center">
        <div class="overlay"></div>
        <div class="hero-content" data-aos="zoom-in">
            <h1 class="display-3 fw-bold">🎬 Welcome to VoxTics</h1>
            <p class="lead">Your ultimate destination for movies, showtimes, and entertainment</p>
            <a href="#now-showing" class="btn btn-lg btn-primary mt-3 shadow">Explore Movies</a>
        </div>
    </section>

    <div class="container my-5">

        <!-- Now Showing -->
        <section id="now-showing" class="mb-5">
            <h2 class="mb-4 fw-bold border-bottom pb-2">🍿 Now Showing</h2>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                @foreach (var movie in Model.NowShowing)
                {
                    <div class="col" data-aos="fade-up">
                        <div class="card movie-card h-100 shadow-sm">
                            <div class="poster-wrapper">
                                <img src="@movie.Images" class="card-img-top" alt="@movie.Title" />
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text text-muted">Released: @movie.ReleaseDate.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Upcoming Movies -->
        <section class="mb-5">
            <h2 class="mb-4 fw-bold border-bottom pb-2">🚀 Upcoming Movies</h2>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                @foreach (var movie in Model.ComingSoon)
                {
                    <div class="col" data-aos="fade-up" data-aos-delay="100">
                        <div class="card movie-card upcoming h-100 shadow-sm">
                            <div class="poster-wrapper">
                                <img src="@movie.Images" class="card-img-top" alt="@movie.Title" />
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <span class="badge bg-primary">Coming @movie.ReleaseDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Static About Section -->
        <section class="about-section text-center my-5 p-5 rounded shadow-lg" data-aos="fade-right">
            <h2 class="fw-bold mb-3">About VoxTics</h2>
            <p class="lead text-muted">
                VoxTics brings the magic of cinema to your fingertips. Browse the latest releases, discover upcoming hits,
                and book your tickets with ease. Enjoy the ultimate movie-going experience!
            </p>
            <a href="#" class="btn btn-lg btn-outline-primary mt-3">Learn More</a>
        </section>

        <!-- Today's Showtimes -->
        <section class="mb-5">
            <h2 class="mb-4 fw-bold border-bottom pb-2">📅 Today’s Showtimes</h2>
            <div class="table-responsive">
                <table class="table table-hover table-striped shadow-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>Movie</th>
                            <th>Cinema</th>
                            <th>Hall</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                   
                </table>
            </div>
        </section>

        <!-- Popular Categories -->
       
        <!-- Stats Footer with Counters -->
        <footer class="stats-footer bg-dark text-white text-center py-5 mt-5 rounded shadow-lg" data-aos="fade-up">
            <div class="row">
             
            </div>
        </footer>

    </div>
</div>

<!-- Custom Styles -->
<style>
    .hero-banner {
        background: url('/images/cinema-bg.jpg') center/cover no-repeat;
        min-height: 70vh;
        position: relative;
    }

        .hero-banner .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.6);
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .movie-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
    }

        .movie-card:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

    .poster-wrapper {
        overflow: hidden;
    }

        .poster-wrapper img {
            height: 300px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .movie-card:hover img {
        transform: scale(1.1);
    }

    .about-section {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .category-badge {
        font-size: 1.1rem;
        transition: transform 0.3s ease, background 0.3s ease;
    }

        .category-badge:hover {
            transform: scale(1.1);
            background: #0dcaf0;
            color: #fff;
        }

    .stats-footer h5 {
        font-size: 1.2rem;
    }

    .stats-footer p {
        font-size: 2rem;
    }
</style>

<!-- Init Scripts -->
<script>
    AOS.init({
        duration: 1000,
        once: true
    });

    // Animated counters
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll('.counter').forEach(function (el) {
            const countTo = el.getAttribute('data-count');
            const counter = new CountUp(el, countTo, { duration: 2 });
            if (!counter.error) {
                counter.start();
            }
        });
    });
</script>
