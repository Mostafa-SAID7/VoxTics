@model VoxTics.Models.ViewModels.CinemaVM

@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-6">
        <img src="@(Model.ImageUrl ?? "/images/no-cinema.png")"
             class="img-fluid rounded" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Address:</strong> @Model.Location</p>
        @if (!string.IsNullOrWhiteSpace(Model.Website))
        {
            <p><a href="@Model.Website" target="_blank">Visit Website</a></p>
        }
    </div>
</div>
