@model VoxTics.Models.ViewModels.CinemaVM

<div class="max-w-3xl mx-auto bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-2">@Model.Name</h2>
    <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-64 object-cover rounded mb-4" />

    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Website:</strong> <a href="@Model.Website" target="_blank" class="text-indigo-600">@Model.Website</a></p>
</div>
