@model VoxTics.Models.ViewModels.CinemaVM

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <p><strong>Location:</strong> @Model.City</p>
    <p><strong>Email:</strong> @Model.Email</p>
    @if (!string.IsNullOrWhiteSpace(Model.Website))
    {
        <p><strong>Website:</strong> <a href="@Model.Website" target="_blank">@Model.Website</a></p>
    }
</div>

@if (Model.SocialMediaLinks != null && Model.SocialMediaLinks.Any())
{
    <h4>Social Media</h4>
    <ul>
        @foreach (var link in Model.SocialMediaLinks)
        {
            <li><a href="@link.Url" target="_blank">@link.Platform</a></li>
        }
    </ul>
}

@if (Model.HallCount > 0)
{
    <h4>Halls</h4>
    <ul>
      
    </ul>
}

@if (Model.Showtimes != null && Model.Showtimes.Any())
{
    <h4>Upcoming Showtimes</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Hall</th>
                <th>Date/Time</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var st in Model.Showtimes)
            {
                <tr>
                    <td>@st.MovieTitle</td>
                    <td>@st.HallName</td>
                    <td>@st.ShowDateTime.ToString("g")</td>
                    <td>@st.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-secondary mt-3" href="@Url.Action("Index", "Cinemas")">Back to Cinemas</a>
