@model IEnumerable<VoxTics.Models.ViewModels.Cinema.CinemaVM>

@{
    ViewData["Title"] = "Browse Cinemas";
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalCount = ViewBag.TotalCount ?? Model.Count();
    int totalPages = (int)Math.Ceiling(totalCount / (double)pageSize);
}

<h1>Browse Cinemas</h1>

<div class="cinema-list row">
    @foreach (var cinema in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@cinema.DisplayImage" class="card-img-top" alt="@cinema.Name" />
                <div class="card-body">
                    <h5 class="card-title">@cinema.Name</h5>
                    <p class="card-text">Country: @cinema.Country ?? "Unknown"</p>
                    <p class="card-text">Halls: @cinema.HallCount | Showtimes: @cinema.ShowtimeCount</p>
                    <a href="@Url.Action("Details", "Cinemas", new { id = cinema.Id })" class="btn btn-primary">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Browse", new { page = i, pageSize = pageSize })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
