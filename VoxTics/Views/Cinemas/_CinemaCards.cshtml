@model IEnumerable<VoxTics.Models.ViewModels.CinemaVM>

<div class="row g-4">
    @foreach (var cinema in Model)
    {
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="@(cinema.ImageUrl ?? "/images/no-cinema.png")"
                     class="card-img-top" alt="@cinema.Name" />

                <div class="card-body">
                    <h5 class="card-title">@cinema.Name</h5>
                    <p class="card-text text-muted small">@cinema.City</p>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Cinemas" asp-action="Details" asp-route-id="@cinema.Id"
                       class="btn btn-sm btn-primary">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
