@using VoxTics.Models.ViewModels.Cinema
@model IEnumerable<CinemaVM>

@{
    ViewData["Title"] = "Cinemas";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="searchTerm" class="form-control" placeholder="Search cinemas..." value="@ViewBag.SearchTerm" />
</form>

@if (!Model.Any())
{
    <p>No cinemas found.</p>
}
else
{
    <div class="row">
        @foreach (var cinema in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    @if (!string.IsNullOrWhiteSpace(cinema.DisplayImage))
                    {
                        <img src="@cinema.DisplayImage" class="card-img-top" alt="@cinema.Name" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@cinema.Name</h5>
                        
                        <a class="btn btn-primary" href="@Url.Action("Details", "Cinemas", new { id = cinema.Id })">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
