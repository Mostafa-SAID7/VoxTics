@model IEnumerable<VoxTics.Models.ViewModels.Booking.BookingListVM>


<div class="container py-5">
    <h2 class="mb-4">My Bookings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You have no bookings yet. <a asp-controller="Movies" asp-action="Index">Browse movies</a> to make a booking.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var booking in Model)
            {
                <div class="col-lg-6 col-md-12">
                    <div class="card shadow-sm h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Booking #@booking.BookingReference</span>
                            <span class="badge
                                        @(booking.Status == VoxTics.Models.Enums.BookingStatus.Confirmed ? "bg-success" :
                                                                    booking.Status == VoxTics.Models.Enums.BookingStatus.Pending ? "bg-warning text-dark" :
                                                                    "bg-secondary")">
                        @booking.Status
                    </span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@booking.MovieTitle</h5>
                    <p class="mb-1"><i class="bi bi-building me-1"></i>@booking.CinemaName</p>
                    <p class="mb-1"><i class="bi bi-calendar-event me-1"></i>@booking.ShowtimeStart.ToString("MMMM dd, yyyy hh:mm tt")</p>
                    <p class="mb-1"><i class="bi bi-currency-dollar me-1"></i>Total Final: @booking.FinalAmount:C</p>
                    <p class="mb-1"><i class="bi bi-credit-card me-1"></i>Payment: @booking.PaymentStatus | Status: @booking.PaymentStatus</p>
                </div>
                <div class="card-footer text-end">
                    <small class="text-muted">Booked on @booking.ShowtimeStart.ToString("MMMM dd, yyyy hh:mm tt")</small>
                </div>
            </div>
        </div>
                }
        </div>
    }
</div>
