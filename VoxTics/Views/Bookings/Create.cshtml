@model VoxTics.Models.ViewModels.Booking.BookingCreateVM
@{
    ViewData["Title"] = "Book Tickets";
}

<div class="container py-5">
    <h2 class="mb-4">Book Tickets for @Model.MovieId</h2>

    <div class="row">
        

        <!-- Booking Form -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Select Seats & Payment</h4>
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MovieId" />
                        <input type="hidden" asp-for="CinemaId" />
                        <input type="hidden" asp-for="ShowtimeId" />

                        <!-- Seat Selection -->
                        <div class="mb-4">
                            <label class="form-label">Select Seats</label>
                            <div class="d-flex flex-wrap gap-2">
                                @for (int i = 1; i <= Model.SeatPrice; i++)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input seat-checkbox" type="checkbox" value="@i" id="seat@i" name="SeatIds" />
                                        <label class="form-check-label" for="seat@i">Seat @i</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="mb-4">
                            <label asp-for="PaymentMethod" class="form-label"></label>
                            <select asp-for="PaymentMethod" class="form-select">
                                <option value="">-- Select Payment --</option>
                                <option value="CreditCard">Credit Card</option>
                                <option value="PayPal">PayPal</option>
                                <option value="Cash">Cash</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <!-- Amount Summary -->
                        <div class="mb-4">
                            <h5>Summary</h5>
                            <p>Seats Selected: <span id="selectedSeats">0</span></p>
                            <p>Total Amount: <span id="totalAmount">@Model.TotalAmount:C</span></p>
                            <p>Discount: <span id="discountAmount">@Model.DiscountAmount:C</span></p>
                            <p class="fw-bold">Final Amount: <span id="finalAmount">@Model.FinalAmount:C</span></p>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Confirm Booking</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const seatPrice = @Model.SeatPrice;
            const discount = @Model.DiscountAmount || 0;

            function updateSummary() {
                const selectedSeats = $('.seat-checkbox:checked').length;
                const total = selectedSeats * seatPrice;
                const final = total - discount;

                $('#selectedSeats').text(selectedSeats);
                $('#totalAmount').text(total.toLocaleString('en-US', { style: 'currency', currency: 'USD' }));
                $('#finalAmount').text(final.toLocaleString('en-US', { style: 'currency', currency: 'USD' }));
            }

            $('.seat-checkbox').on('change', updateSummary);
            updateSummary();
        });
    </script>
}
