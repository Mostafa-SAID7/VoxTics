@using Microsoft.AspNetCore.Identity
@inject SignInManager<VoxTics.Areas.Identity.Models.Entities.ApplicationUser> SignInManager
@inject UserManager<VoxTics.Areas.Identity.Models.Entities.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - VoxTics Cinema</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="VoxTics - Your ultimate movie ticket booking platform" />
    <meta name="theme-color" content="#667eea" />

    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main/mainlayout.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="loading-overlay d-none">
        <div class="loading-spinner"></div>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-modern" id="mainNavbar">
        <div class="container-fluid">
            <a class="navbar-brand navbar-brand-modern" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="brand-icon">🎬</span> VoxTics
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse navbar-collapse-modern" id="navbarNav">
                @* Left links *@
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @{
                        var navLinks = new[]
                        {
                                        new { Controller="Home", Action="Index", Text="Home", Icon="bi-house" },
                                        new { Controller="Movies", Action="Index", Text="Movies", Icon="bi-film" },
                                        new { Controller="Cinemas", Action="Index", Text="Cinemas", Icon="bi-building" },
                                        new { Controller="Showtimes", Action="Index", Text="Showtimes", Icon="bi-calendar-event" }
                                        };
                    }
                    @foreach (var link in navLinks)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == link.Controller ? "active" : "")"
                               asp-area="" asp-controller="@link.Controller" asp-action="@link.Action">
                                <i class="bi @link.Icon me-1"></i>@link.Text
                            </a>
                        </li>
                    }
                </ul>

                @* Search form *@
                <form class="d-flex me-3" method="get" asp-controller="Movies" asp-action="Index">
                    <div class="input-group">
                        <input type="search" name="search" class="form-control"
                               placeholder="Search movies, actors, genres..."
                               value="@Context.Request.Query["search"]" />
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>

                @* User & Admin links *@
                <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-gear me-1"></i>Admin
                                </a>
                            </li>
                        }

                        <li class="nav-item dropdown user-dropdown" >
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar me-2">@User.Identity.Name?.Substring(0, 1).ToUpper()</div>
                                <span class="d-none d-lg-inline">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header">
                                    <div class="fw-semibold">@User.Identity.Name</div>
                                    <div class="text-muted small">Welcome back!</div>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-controller="Profile" asp-action="Welcome">
                                        <i class="bi bi-person-circle me-2"></i>My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Bookings" asp-action="MyBookings">
                                        <i class="bi bi-ticket-perforated me-2"></i>My Bookings
                                    </a>

                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="User" asp-action="Favorites">
                                        <i class="bi bi-heart me-2"></i>Favorites
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="User" asp-action="Settings">
                                        <i class="bi bi-gear me-2"></i>Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-area="Identity" asp-controller="Account" asp-action="Logout">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="pb-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-modern">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5><span class="brand-icon me-2">🎬</span>VoxTics Cinema</h5>
                    <p>Your ultimate movie ticket booking platform.</p>
                    <p><i class="bi bi-geo-alt me-2"></i>123 Cinema Street</p>
                    <p><i class="bi bi-envelope me-2"></i><a href="mailto:support@voxtics.com">support@voxtics.com</a></p>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" asp-controller="Movies" asp-action="Index">Movies</a></li>
                        <li><a asp-area="" asp-controller="Cinemas" asp-action="Index">Cinemas</a></li>
                        <li><a asp-area="" asp-controller="Showtimes" asp-action="Index">Showtimes</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Services</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Booking" asp-action="Index">Book Tickets</a></li>
                        <li><a asp-controller="Movies" asp-action="ComingSoon">Coming Soon</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Connect</h5>
                    <div class="social-links">
                        <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>

            <div class="footer-bottom mt-4 d-flex justify-content-between">
                <span>&copy; @DateTime.Now.Year VoxTics Cinema. All rights reserved.</span>
                <span>Powered by VoxTics</span>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button id="backToTop" class="btn position-fixed bottom-4 end-4 rounded-circle d-none" style="width:50px;height:50px;">
        <i class="bi bi-arrow-up text-white"></i>
    </button>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validate-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/main/main.js"></script>

    <script>
        (() => {
            // Show Login modal if TempData is set
            var showLogin = '@(TempData["ShowLoginModal"] ?? "false")';
            if (showLogin.toLowerCase() === 'true') {
                new bootstrap.Modal(document.getElementById('loginModal')).show();
            }

            // Show Register modal if TempData is set
            var showRegister = '@(TempData["ShowRegisterModal"] ?? "false")';
            if (showRegister.toLowerCase() === 'true') {
                new bootstrap.Modal(document.getElementById('registerModal')).show();
            }

            // Toastr notifications
            var success = '@(TempData["success-notification"] ?? "")';
            var error = '@(TempData["error-notification"] ?? "")';
            if (success) toastr.success(success);
            if (error) toastr.error(error);

            // Loading overlay on submit
            $('form').on('submit', () => $('#loadingOverlay').removeClass('d-none').addClass('d-flex'));

            // Back to top
            const backBtn = $('#backToTop');
            $(window).on('scroll', () => backBtn.toggleClass('d-none', $(window).scrollTop() <= 300));
            backBtn.on('click', () => $('html, body').animate({ scrollTop: 0 }, 500));
        })();
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
