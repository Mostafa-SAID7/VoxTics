@using VoxTics.Models.ViewModels.Filter
@model ErrorVM

@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>
<a href="/" class="mt-4 inline-block text-indigo-600 hover:underline">Back to Home</a>

@if (Model != null && Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
else
{
    <p><em>No request id available.</em></p>
}

<p>
    If you need help, copy the Request ID and check logs.
</p>
