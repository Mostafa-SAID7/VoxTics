@model VoxTics.Models.ViewModels.MovieCardVM

<div class="card h-100 shadow-sm border-0">
    <img src="@Model.ImgUrl" class="card-img-top" alt="@Model.Title" style="height:300px; object-fit:cover;" />
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Title</h5>
        <p class="text-muted mb-2">@Model.CategoryName</p>
        <p class="fw-bold text-success mb-3">$@Model.Price</p>

        <div class="mt-auto d-flex justify-content-between">
            <button class="btn btn-outline-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#movieModal"
                    data-id="@Model.Id">
                Details
            </button>
            <button class="btn btn-success book-btn"
                    data-movie-id="@Model.Id"
                    data-movie-title="@Model.Title">
                Book
            </button>
        </div>
    </div>
</div>
