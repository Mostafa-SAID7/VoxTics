@model VoxTics.Models.ViewModels.MovieVM

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-4">
        <img src="@Model.PosterImage" alt="@Model.Title" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
        <p><strong>Duration:</strong> @Model.DurationInMinutes minutes</p>
        <p><strong>Director:</strong> @Model.Director</p>
        <p><strong>Language:</strong> @Model.Language</p>
        <p><strong>Country:</strong> @Model.Country</p>
        <p><strong>Age Rating:</strong> @Model.AgeRating</p>
        <p><strong>Categories:</strong> @Model.CategoryNames</p>
        <p><strong>Actors:</strong></p>
        <ul>
            @foreach (var actor in Model.Actors)
            {
                <li>@actor.FirstName</li>
            }
        </ul>
        <p><strong>Price:</strong> $@Model.BasePrice</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Movies</a>
