@model VoxTics.Models.ViewModels.Movie.MovieDetailsVM
@using VoxTics.Helpers.ImgsHelper
@{
    ViewData["Title"] = Model.Title;
}

<div class="movie-details-container">

    <!-- Hero Section -->
    <section class="movie-hero">
        <div class="hero-background" style="background-image: url('@Model.MainImageUrl');"></div>
        <div class="hero-overlay"></div>

        <div class="hero-content">
            <div class="hero-poster">
                <img src="@Model.MainImageUrl" alt="@Model.Title" loading="eager" />
            </div>

            <div class="hero-info">
                <h1>@Model.Title</h1>

                <div class="hero-meta">
                    @if (Model.Category != null)
                    {
                        <div class="meta-item">
                            <span class="meta-icon">🎭</span>
                            <span>@Model.Category.Name</span>
                        </div>
                    }

                    <div class="meta-item">
                        <span class="meta-icon">📅</span>
                        <span>@Model.ReleaseDate.Year</span>
                    </div>

                    <div class="meta-item">
                        <span class="meta-icon">⏱️</span>
                        <span>@Model.Duration mins</span>
                    </div>

                    @if (Model.Rating.HasValue)
                    {
                        <div class="meta-item">
                            <span class="meta-icon">⭐</span>
                            <span>@Model.Rating.Value.ToString("0.0")</span>
                        </div>
                    }
                </div>

                <p class="hero-description">@Model.Description</p>

                <div class="hero-actions">
                    <a class="btn-hero btn-book"
                       asp-controller="Bookings"
                       asp-action="Create"
                       asp-route-movieId="@Model.Id">
                        🎫 Book Now
                    </a>
                    <a class="btn-hero btn-back" asp-action="Index">
                        ← Back to Movies
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="details-content">

        <!-- Movie Information -->
        <section class="content-section">
            <div class="section-header">
                <h2 class="section-title">
                    <span class="section-icon">📋</span>
                    Movie Information
                </h2>
            </div>
            <div class="section-content">
                <div class="movie-info-grid">
                    <div class="info-card">
                        <div class="info-label">Director</div>
                        <div class="info-value">@(Model.Director ?? "Not specified")</div>
                    </div>

                    <div class="info-card">
                        <div class="info-label">Release Date</div>
                        <div class="info-value">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</div>
                    </div>

                    <div class="info-card">
                        <div class="info-label">Duration</div>
                        <div class="info-value duration">@Model.Duration</div>
                    </div>

                    <div class="info-card">
                        <div class="info-label">Price</div>
                        <div class="info-value price">@Model.Price.ToString("C")</div>
                    </div>

                    @if (Model.Rating.HasValue)
                    {
                        <div class="info-card">
                            <div class="info-label">Rating</div>
                            <div class="info-value rating">@Model.Rating.Value.ToString("0.0")</div>
                        </div>
                    }

                    @if (Model.Category != null)
                    {
                        <div class="info-card">
                            <div class="info-label">Category</div>
                            <div class="info-value">@Model.Category.Name</div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- Image Gallery -->
        @if (Model.VariantImages.Any())
        {
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <span class="section-icon">🖼️</span>
                        Gallery
                    </h2>
                </div>
                <div class="section-content">
                    <div class="image-gallery">
                        @foreach (var img in Model.VariantImages)
                        {
                            <div class="gallery-item">
                                <img src="@img.Url"
                                     alt="@(img.AltText ?? Model.Title)"
                                     loading="lazy" />
                                <div class="gallery-overlay">
                                    <div class="gallery-zoom">🔍</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        }

        <!-- Cast Section -->
        @if (Model.Actors.Any())
        {
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <span class="section-icon">👥</span>
                        Cast
                    </h2>
                </div>
                <div class="section-content">
                    <div class="cast-grid">
                        @foreach (var actor in Model.Actors)
                        {
                            <div class="cast-card">
                                <div class="cast-image">
                                    @if (!string.IsNullOrEmpty(actor.ImageUrl))
                                    {
                                        <img src="@actor.ImageUrl"
                                             alt="@actor.FullName"
                                             loading="lazy" />
                                    }
                                    else
                                    {
                                        <div class="cast-placeholder">👤</div>
                                    }
                                </div>
                                <div class="cast-info">
                                    <h3 class="cast-name">@actor.FullName</h3>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        }

        <!-- Showtimes Section -->
        @if (Model.Showtimes.Any())
        {
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <span class="section-icon">🕐</span>
                        Showtimes
                    </h2>
                </div>
                <div class="section-content">
                    <div class="showtimes-grid">
                        @foreach (var showtime in Model.Showtimes.OrderBy(s => s.StartTime))
                        {
                            <div class="showtime-card" data-showtime-id="@showtime.Id">
                                <div class="showtime-date">@showtime.StartTime.ToString("dddd, MMMM dd")</div>
                                <div class="showtime-time">@showtime.StartTime.ToString("HH:mm")</div>
                                <div class="showtime-hall">Hall @showtime.HallId</div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        }

    </div>

    <!-- Floating Action Button -->
    <a class="fab-book"
       asp-controller="Bookings"
       asp-action="Create"
       asp-route-movieId="@Model.Id"
       title="Book Tickets">
        🎫
    </a>

</div>

@section Styles {
    <link rel="stylesheet" href="~/css/main/moviedetails.css" />
}

@section Scripts {
    <script src="~/js/main/moviedetails.js"></script>
}   