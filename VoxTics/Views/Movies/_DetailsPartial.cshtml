@using VoxTics.Models.ViewModels
@model MovieVM

<div class="modal-header">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-4">
            <img src="@(string.IsNullOrWhiteSpace(Model.PosterImage) ? "/images/logo.png" : Model.PosterImage)" class="img-fluid rounded mb-3" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <p class="text-muted">@Model.DurationInMinutes min | Released: @(Model.ReleaseDate.ToString("yyyy") ?? "-")</p>
            <p>@Model.Description</p>

            <p><strong>Price:</strong> @(Model.BasePrice.ToString("C"))</p>

            @if (Model.Categories != null && Model.Categories.Any())
            {
                <p>
                    <strong>Categories:</strong>
                    @foreach (var cat in Model.Categories)
                    {
                        <a asp-controller="Categories" asp-action="Details" asp-route-id="" class="badge bg-secondary me-1">@cat</a>
                    }
                </p>
            }

            @if (Model.Actors != null && Model.Actors.Any())
            {
                <p><strong>Actors:</strong> @string.Join(", ", Model.Actors)</p>
            }
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
