@using VoxTics.Models.ViewModels.Movie
@model MovieVM

<div class="modal-header border-0 pb-0">
    <h4 class="modal-title fw-bold text-white">@Model.Title</h4>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row g-4">
        <div class="col-md-5">
            @if (Model.Images != null && Model.Images.Any())
            {
                var carouselId = $"movieImagesCarousel_{Model.Id}";
                <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <button type="button" data-bs-target="#@carouselId" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                        }
                    </div>
                    <div class="carousel-inner rounded-3 overflow-hidden shadow-sm">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            var img = Model.Images[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@img" class="d-block w-100" style="height:420px; object-fit:cover;" alt="@Model.Title">
                            </div>
                        }
                    </div>
                    @if (Model.Images.Count > 1)
                    {
                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    }
                </div>
            }
            else
            {
                <div class="poster-wrapper rounded-3 overflow-hidden shadow-sm">
                    <img src="@Model.DisplayImage" alt="@Model.ImageAlt" class="img-fluid w-100" style="height:420px; object-fit:cover;" />
                </div>
            }
        </div>

        <div class="col-md-7 d-flex flex-column">
            <p class="text-muted mb-3 fs-6">@Model.Description</p>

            <div class="d-flex flex-wrap gap-2 mb-3">
                @foreach (var cat in Model.Categories)
                {
                    <span class="badge bg-primary rounded-pill">@cat</span>
                }
            </div>

            <ul class="list-unstyled small mb-4">
                <li><strong>Release:</strong> @Model.ReleaseDateFormatted</li>
                <li><strong>Duration:</strong> @Model.FormattedDuration</li>
                <li><strong>Price:</strong> @Model.FormattedPrice</li>
                <li><strong>Director:</strong> @Model.Director</li>
                <li><strong>Language:</strong> @Model.Language</li>
                <li><strong>Country:</strong> @Model.Country</li>
                <li><strong>Age Rating:</strong> @Model.AgeRating</li>
                <li><strong>Status:</strong> <span class="badge bg-secondary">@Model.Status</span></li>
            </ul>

            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <div class="mb-3">
                    <a href="@Model.TrailerUrl" target="_blank" class="btn btn-danger">
                        <i class="bi bi-play-circle me-2"></i> Watch Trailer
                    </a>
                </div>
            }

            @if (Model.Actors != null && Model.Actors.Any())
            {
                <h6 class="fw-semibold mb-2">🎭 Cast</h6>
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var actor in Model.Actors)
                    {
                        <div class="d-flex flex-column align-items-center">
                            <img src="@actor.ImageUrl" class="rounded-circle shadow-sm" style="width:60px; height:60px; object-fit:cover;" alt="@actor.FirstName" />
                            <span class="small mt-1 text-truncate" style="max-width:70px;">@actor.FirstName</span>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
