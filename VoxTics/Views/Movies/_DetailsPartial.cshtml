@model VoxTics.Models.ViewModels.MovieVM

<div class="modal-header">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded" />
        </div>
        <div class="col-md-8">
            <p class="text-muted">@Model.Duration min | Released: @Model.ReleaseDate.ToString("yyyy")</p>
            <p>@Model.Description</p>
            <div>
                <strong>Categories:</strong>
                @foreach (var cat in Model.Categories)
                {
                    <span class="badge bg-secondary">@cat.Name</span>
                }
            </div>
        </div>
    </div>
</div>
