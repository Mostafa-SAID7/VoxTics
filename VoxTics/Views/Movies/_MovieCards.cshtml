@model VoxTics.Models.ViewModels.MovieVM

<div class="movie-card card h-100 border-0 rounded-4 overflow-hidden shadow-lg">
    <!-- Poster -->
    <div class="poster-wrapper position-relative">
        <img src="@Model.DisplayImage" alt="@Model.ImageAlt" class="card-img-top movie-poster" />

        <!-- Status badge -->
        <span class="status-badge position-absolute top-0 start-0 m-2 px-3 py-1 rounded-pill @Model.StatusBadgeClass">
            <i class="@Model.StatusIcon me-1"></i> @Model.Status
        </span>

        <!-- Rating -->
        <div class="rating-badge position-absolute bottom-0 start-0 m-2 px-2 py-1 rounded-2 bg-dark bg-opacity-75 text-warning small shadow-sm">
            ⭐ @Model.Rating / 10
        </div>
    </div>

    <!-- Content -->
    <div class="card-body d-flex flex-column p-3">
        <h5 class="card-title fw-semibold text-truncate mb-2" title="@Model.Title">
            @Model.Title
        </h5>

        <!-- Categories -->
        @if (Model.Categories != null && Model.Categories.Any())
        {
            <div class="d-flex flex-wrap gap-1 mb-2">
                @foreach (var cat in Model.Categories.Take(3))
                {
                    <span class="badge bg-secondary small">@cat</span>
                }
            </div>
        }

        <!-- Short Description -->
        <p class="card-text text-muted small text-truncate-2 mb-3">
            @Model.ShortDescription
        </p>

        <!-- Footer -->
        <div class="mt-auto d-flex justify-content-between align-items-center">
            <span class="badge bg-gradient bg-dark text-white px-3 py-2 rounded-pill shadow-sm">
                🎬 Movie
            </span>
            <a href="javascript:void(0);"
               class="btn btn-sm btn-primary view-details shadow-sm"
               data-id="@Model.Id"
               data-url="@Url.Action("Details", "Movies", new { id = Model.Id })">
                View Details
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Card container */
        .movie-card {
            background: #1e293b; /* Slate dark */
            border-radius: 1rem;
            transition: transform .3s ease, box-shadow .3s ease;
        }

            .movie-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
            }

        /* Poster image */
        .movie-poster {
            height: 300px;
            object-fit: cover;
            transition: transform .4s ease, filter .4s ease;
        }

        .movie-card:hover .movie-poster {
            transform: scale(1.07);
            filter: brightness(1.1);
        }

        /* Status badge */
        .status-badge {
            font-size: 0.8rem;
            background: linear-gradient(135deg, rgba(0,0,0,.75), rgba(30,41,59,.8));
            backdrop-filter: blur(8px);
            color: #fff;
            font-weight: 500;
            box-shadow: 0 4px 8px rgba(0,0,0,.4);
        }

        /* Rating badge */
        .rating-badge {
            font-size: 0.85rem;
            font-weight: 600;
            border: 1px solid rgba(255,255,255,0.2);
        }

        /* Description clamp */
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        /* Button */
        .view-details {
            transition: all .25s ease;
        }

            .view-details:hover {
                background: #0b5ed7;
                transform: translateY(-2px);
            }
    </style>
}
