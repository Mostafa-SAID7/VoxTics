@model IEnumerable<VoxTics.Models.ViewModels.MovieVM>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(movie.PosterImage ?? "/images/placeholder.png")"
                     class="card-img-top"
                     alt="@movie.Title" />
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text text-muted">@movie.Categories</p>
                    <a href="@Url.Action("Details", "Movies", new { id = movie.Id })"
                       class="btn btn-primary btn-sm">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
