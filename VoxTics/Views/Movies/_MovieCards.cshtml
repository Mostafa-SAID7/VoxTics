@model VoxTics.Helpers.PaginatedList<VoxTics.Models.ViewModels.MovieVM>

<div class="row g-3">
    @if (Model == null || !Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">No movies found.</div>
        </div>
    }
    else
    {
        @foreach (var movie in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrWhiteSpace(movie.ImageUrl) ? "/images/logo.png" : movie.ImageUrl)" class="card-img-top" alt="@movie.Title" style="height:200px; object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text text-truncate">@movie.Description</p>

                        <div class="mt-2">
                            @if (movie.Categories != null && movie.Categories.Any())
                            {
                                foreach (var cat in movie.Categories)
                                {
                                    <a asp-controller="Categories" asp-action="Details" asp-route-id="@cat.Id" class="badge bg-secondary me-1">@cat.Name</a>
                                }
                            }
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-primary btn-details ms-auto">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
