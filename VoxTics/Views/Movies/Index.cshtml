@model IEnumerable<VoxTics.Models.ViewModels.MovieVM>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" class="mb-3">
    <input type="text" name="searchTerm"
           placeholder="Search movies..."
           class="form-control mb-2"
           value="@Context.Request.Query["searchTerm"]" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (!Model.Any())
{
    <p>No movies found.</p>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="@movie.PosterImage" alt="@movie.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.CategoryNames</p>
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@movie.Id">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
