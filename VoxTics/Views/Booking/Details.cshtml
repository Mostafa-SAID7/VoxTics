@using VoxTics.Models.ViewModels.Booking
@model BookingVM

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div class="card mb-3">
    @if (!string.IsNullOrEmpty(Model.MoviePoster))
    {
        <img src="@Model.MoviePoster" class="card-img-top" alt="@Model.MovieTitle" />
    }
    <div class="card-body">
        <h5 class="card-title">@Model.MovieTitle</h5>
        <p class="card-text">
            <strong>Cinema:</strong> @Model.CinemaName - @Model.HallName <br />
            <strong>Showtime:</strong> @Model.FormattedShowtime <br />
            <strong>Seats:</strong> @string.Join(", ", Model.SeatNumbers) <br />
            <strong>Quantity:</strong> @Model.Quantity <br />
            <strong>Total:</strong> @Model.FormattedTotalPrice <br />
            <strong>Discount:</strong> @Model.DiscountAmount.ToString("C") <br />
            <strong>Final:</strong> @Model.FormattedFinalAmount <br />
            <strong>Status:</strong> @Model.StatusDisplay <br />
            <strong>Payment Status:</strong> @Model.PaymentStatusDisplay <br />
            @if (!string.IsNullOrEmpty(Model.PaymentMethod))
            {
                <strong>Payment Method:</strong> @Model.PaymentMethod <br />
            }
            <strong>Booking Date:</strong> @Model.FormattedBookingDate <br />
            @if (Model.PaymentDate.HasValue)
            {
                <strong>Payment Date:</strong> @Model.PaymentDate.Value.ToString("f") <br />
            }
        </p>

        <a asp-action="MyBookings" class="btn btn-secondary">Back</a>
        @if (Model.CanBeCancelled)
        {
            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">Cancel Booking</button>
            </form>
        }
    </div>
</div>
