@model IEnumerable<VoxTics.Models.ViewModels.BookingVM>

<table class="w-full border-collapse">
    <thead>
        <tr class="bg-gray-100 text-left">
            <th class="p-2 border">Movie</th>
            <th class="p-2 border">Cinema</th>
            <th class="p-2 border">Showtime</th>
            <th class="p-2 border">Seats</th>
            <th class="p-2 border">Booked On</th>
            <th class="p-2 border">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td class="p-2 border">@booking.MovieTitle</td>
                <td class="p-2 border">@booking.CinemaName</td>

                <td class="p-2 border">
                    <form asp-action="Delete" asp-route-id="@booking.Id" method="post"
                          onsubmit="return confirm('Cancel this booking?');">
                        <button type="submit" class="bg-red-600 text-white px-2 py-1 rounded text-sm">
                            Cancel
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
