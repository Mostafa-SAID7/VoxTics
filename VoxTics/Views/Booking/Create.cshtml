@model VoxTics.Models.ViewModels.BookingCreateVM

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ShowtimeId" />

    <div class="mb-3">
        <label asp-for="NumberOfTickets" class="form-label"></label>
        <input asp-for="NumberOfTickets" class="form-control" />
        <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentMethod" class="form-label"></label>
        <select asp-for="PaymentMethod" class="form-select">
            <option value="CreditCard">Credit Card</option>
            <option value="PayPal">PayPal</option>
            <option value="Cash">Cash</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
    <a asp-action="MyBookings" class="btn btn-secondary">Back</a>
</form>
<div class="container mt-3">
    @await Html.PartialAsync("_NotificationPartial")
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
