@using VoxTics.Models.ViewModels.Booking
@model IEnumerable<BookingVM>

@{
    ViewData["Title"] = "My Bookings";
}

<h2 class="mb-3">My Bookings</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no bookings yet.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var booking in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    @if (!string.IsNullOrEmpty(booking.MoviePoster))
                    {
                        <img src="@booking.MoviePoster" class="card-img-top" alt="@booking.MovieTitle" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@booking.MovieTitle</h5>
                        <p class="card-text">
                            <strong>Cinema:</strong> @booking.CinemaName - @booking.HallName <br />
                            <strong>Showtime:</strong> @booking.FormattedShowtime <br />
                            <strong>Seats:</strong> @string.Join(", ", booking.SeatNumbers) <br />
                            <strong>Total:</strong> @booking.FormattedFinalAmount <br />
                            <strong>Status:</strong> @booking.StatusDisplay
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-primary btn-sm">View</a>
                            @if (booking.CanBeCancelled)
                            {
                                <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
