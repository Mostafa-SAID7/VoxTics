@using VoxTics.Models.ViewModels.Showtime
@model IEnumerable<ShowtimeVM>

@{
    ViewData["Title"] = "Showtimes";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" class="mb-3">
    <input type="text" name="searchTerm"
           placeholder="Search ..."
           class="form-control mb-2"
           value="@Context.Request.Query["searchTerm"]" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (!Model.Any())
{
    <p>No showtimes available.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Cinema</th>
                <th>Hall</th>
                <th>Date / Time</th>
                <th>Price</th>
                <th>Seats</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.MovieTitle</td>
                    <td>@s.CinemaName</td>
                    <td>@s.HallName</td>
                    <td>@s.ShowDateTime.ToString("g")</td>
                    <td>@s.Price.ToString("C")</td>
                    <td>@s.AvailableSeats / @s.TotalSeats</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "Showtimes", new { id = s.Id })">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
