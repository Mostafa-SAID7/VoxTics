@model VoxTics.Models.ViewModels.ShowtimeVM

<div class="max-w-2xl mx-auto bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-2">@Model.MovieTitle</h2>
    <p class="text-gray-600"><strong>Cinema:</strong> @Model.CinemaName</p>
    <p class="text-gray-600"><strong>Showtime:</strong> @Model.ShowTime.ToString("f")</p>

    <div class="mt-4">
        <a asp-controller="Bookings" asp-action="Create" asp-route-id="@Model.Id"
           class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
            Book Tickets
        </a>
    </div>
</div>
