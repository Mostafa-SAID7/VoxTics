@model VoxTics.Models.ViewModels.ShowtimeVM

@{
    ViewData["Title"] = Model.MovieTitle + " - Showtime Details";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.MoviePosterImage))
        {
            <img src="@Model.MoviePosterImage" class="img-fluid" alt="@Model.MovieTitle" />
        }
    </div>
    <div class="col-md-8">
        <p><strong>Movie:</strong> @Model.MovieTitle</p>
        <p><strong>Duration:</strong> @Model.MovieDuration minutes</p>
        <p><strong>Cinema:</strong> @Model.CinemaName</p>
        <p><strong>Address:</strong> @Model.CinemaAddress</p>
        <p><strong>Hall:</strong> @Model.HallName</p>
        <p><strong>Date / Time:</strong> @Model.ShowDateTime.ToString("f")</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Seats Available:</strong> @Model.AvailableSeats / @Model.TotalSeats</p>

        <a class="btn btn-primary" href="@Url.Action("Create", "Booking", new { showtimeId = Model.Id })">
            Book Now
        </a>
    </div>
</div>

<a class="btn btn-secondary mt-3" href="@Url.Action("Index", "Showtimes")">Back to Showtimes</a>
