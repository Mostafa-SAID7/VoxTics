@model VoxTics.Models.ViewModels.LoginVM

<form id="loginForm" method="post" asp-action="Login" asp-controller="Users">
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="border p-2 rounded w-full" />
        <span asp-validation-for="Email" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Password" type="password" class="border p-2 rounded w-full" />
        <span asp-validation-for="Password" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <input asp-for="RememberMe" type="checkbox" /> Remember me
    </div>
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded">Login</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#loginForm").submit(function (e) {
                e.preventDefault();
                $.post($(this).attr("action"), $(this).serialize())
                    .done(function (data) {
                        if (data.success) {
                            location.href = "/"; // redirect on success
                        } else {
                            alert(data.message || "Invalid login.");
                        }
                    });
            });
        });
    </script>
}
