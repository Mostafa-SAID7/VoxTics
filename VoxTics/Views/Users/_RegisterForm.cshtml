@model VoxTics.Models.ViewModels.RegisterVM

<form id="registerForm" method="post" asp-action="Register" asp-controller="Users">
    <div class="mb-3">
        <label>Full Name</label>
        <input asp-for="FullName" class="border p-2 rounded w-full" />
        <span asp-validation-for="FullName" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="border p-2 rounded w-full" />
        <span asp-validation-for="Email" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Password" type="password" class="border p-2 rounded w-full" />
        <span asp-validation-for="Password" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="border p-2 rounded w-full" />
        <span asp-validation-for="ConfirmPassword" class="text-red-600"></span>
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Register</button>
</form>

@section Scripts {
    <script>
        $("#registerForm").submit(function (e) {
            e.preventDefault();
            $.post($(this).attr("action"), $(this).serialize())
                .done(function (data) {
                    if (data.success) {
                        alert("Account created. Please log in.");
                        $("#registerModal").modal("hide");
                    } else {
                        alert(data.message || "Error creating account.");
                    }
                });
        });
    </script>
}
