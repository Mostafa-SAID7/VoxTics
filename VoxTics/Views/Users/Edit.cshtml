@model VoxTics.Models.ViewModels.UserEditVM

<form id="editProfileForm" method="post" asp-action="EditProfile" asp-controller="Users">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Full Name</label>
        <input asp-for="FirstName" class="border p-2 rounded w-full" />
        <span asp-validation-for="FirstName" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <label>Phone</label>
        <input asp-for="Phone" class="border p-2 rounded w-full" />
        <span asp-validation-for="Phone" class="text-red-600"></span>
    </div>
    <div class="mb-3">
        <label>Address</label>
        <input asp-for="Address" class="border p-2 rounded w-full" />
        <span asp-validation-for="Address" class="text-red-600"></span>
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Save</button>
</form>

@section Scripts {
    <script>
        $("#editProfileForm").submit(function (e) {
            e.preventDefault();
            $.post($(this).attr("action"), $(this).serialize())
                .done(function (data) {
                    if (data.success) {
                        $("#editProfileModal").modal("hide");
                        $("#profileContainer").load("/Users/Profile"); // reload profile partial
                    } else {
                        alert(data.message || "Error updating profile.");
                    }
                });
        });
    </script>
}
