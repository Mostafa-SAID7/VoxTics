# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# C# files
[*.cs]
indent_size = 4

# C# project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# C# solution files
[*.sln]
indent_style = tab

# JSON files
[*.json]
indent_size = 2

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# CSS, SCSS, and LESS files
[*.{css,scss,less}]
indent_size = 2

# HTML and Razor files
[*.{html,cshtml,razor}]
indent_size = 2

# XML files
[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# PowerShell files
[*.{ps1,psm1,psd1}]
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Git files
[.gitattributes]
end_of_line = crlf

[.gitignore]
end_of_line = crlf

# Package files
[{package.json,package-lock.json,yarn.lock}]
indent_size = 2

# Configuration files
[*.{config,conf,ini}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# License and README files
[{LICENSE,README,CHANGELOG,CONTRIBUTING}*]
indent_size = 2

# Ignore generated files
[{*.min.js,*.min.css,*.bundle.js,*.bundle.css}]
insert_final_newline = false
trim_trailing_whitespace = false

# Ignore binary files
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,eot,ttf,otf}]
insert_final_newline = false
trim_trailing_whitespace = false